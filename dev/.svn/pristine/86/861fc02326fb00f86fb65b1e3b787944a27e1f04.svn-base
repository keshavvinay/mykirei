@charset "utf-8";

/*****************************
  Clientlibs config
 *****************************/

/*
 setting
 （上書き禁止）
 */
$breakpoint_sm:  640px;
$breakpoint_md: 1024px;
$breakpoint_lg: 1366px;
$contentsMaxWidth_sm: $breakpoint_sm;
$contentsMaxWidth_md: $breakpoint_md;
$contentsMaxWidth_lg: $breakpoint_lg;


/*
 common veriable
 （共通変数・任意）
 */
$paddingInner: 20px; //（廃止予定）
$cmn_paddingInner: 20px;
$cmn_colorGray_0: #fff;
$cmn_colorGray_1: #000;
$cmn_colorGray_2: #333;
$cmn_colorGray_3: #666;
