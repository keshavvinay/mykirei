@charset "utf-8";


/* HR ================================================== */
.g-Hr {
  margin: 0 auto;
}
.g-Hr__hr {
  border-width: 1px 0 0;
  &.is-style--solid {
    border-style: solid;
  }
  &.is-style--dot {
    border-style: dotted;
  }
  &.is-width--s {
    border-top-width: $borderWidthHr_s;
  }
  &.is-width--m {
    border-top-width: $borderWidthHr_m;
  }
  &.is-width--l {
    border-top-width: $borderWidthHr_l;
  }
  &.is-color--1 {
    border-color: $colorHr_1;
  }
  &.is-color--2 {
    border-color: $colorHr_2;
  }
  &.is-color--3 {
    border-color: $colorHr_3;
  }
  &.is-color--4 {
    border-color: $colorHr_4;
  }
  &.is-color--5 {
    border-color: $colorHr_5;
  }
  &.is-color--6 {
    border-color: $colorHr_6;
  }
  &.is-color--7 {
    border-color: $colorHr_7;
  }
}

/* modifer sample ==================================================*/
.g-Hr--sample1 {
  .g-Hr__hr {
    border-color: red;
  }
}

.g-Hr--sample2 {
  margin-left: 0;
  margin-right: auto;
}
