//JERGENS HEADER CSS

#headerWrapper-au,#headerWrapper-mx,#headerWrapper-us,#headerWrapper-sa,#headerWrapper-ca{
    background-color: #fff;
    
    &:after{
    border-bottom:1px solid #ccc;    
    }
}

.headerWrapper{
    position: relative;
    
    background:url(/content/dam/sites/kaousa/www-jergens-com/images/master/global/jergens-global-header-background.png) 49% -80px no-repeat;
    
    @media(min-width:1025px){
        border-bottom: 1px solid #d7d7d7;
    }
    
    @media(max-width:$breakpoint_md){
        
        background-size: 120px;
        background-position: 51% -5px;
    }
    
//    &.noBorder{
//            border-bottom: 0;
//        }
    
    .hamberger-jergens{
        display: none;
        z-index: 10;
        border: none;
    background: none;
    outline: none;
    position: absolute;
    right: 5px;    
    top: 36%;
        
        
        
        @media (max-width:$breakpoint_md){
            display: block;
        }
        
        &>span{
                height: 2px;
    width: 25px;
    background-color: #333;
    display: block;
    margin-bottom: 5px;
        }
    }
    
    .close-menu{
        border: none;
    background: none;
    outline: none;
    position: absolute;
    right: 15px;
    top: 15px;
        
        img{
           width: 30px;
           height: auto;
        }
        
        @media (min-width:1025px){
            display: none;
        }
        
        &:before{
                content: '';
    display: block;
    width: 2px;
    height: 18px;
    background-color: #333;
    transform: rotate(45deg);
        }
         &:after{
             content: '';
    display: block;
    width: 2px;
    height: 18px;
    background-color: #333;
    transform: rotate(-45deg);
    position: absolute;
    top: 1px;
    z-index: -1;
        }
    }
    
    background-color: rgba(247, 247, 247,1);
//    -webkit-box-shadow: 0px 5px 10px -5px rgba(167, 163, 163, 1);
//-moz-box-shadow: 0px 5px 10px -5px rgba(167, 163, 163, 1);
//box-shadow: 0px 5px 10px -5px rgba(167, 163, 163, 1);
    
    &:after{
        content: '';
        display: none;
  
    }
    
    
    
    &.openScreen:after{
        
        @media (max-width:$breakpoint_md){
          display: none;
    }
        
        content: '';
        position: absolute;
        z-index: 2;
        width: 100%;
    height: 40px;
    display: block;
        background-color: #f7f7f7;
    background-color:  rgba(247, 247, 247,0.9);
        -webkit-box-shadow: inset 0px 5px 10px -5px rgba(167, 163, 163, 1);
        -moz-box-shadow: inset 0px 5px 10px -5px rgba(167, 163, 163, 1);
        box-shadow: inset 0px 5px 10px -5px rgba(167, 163, 163, 1);
        
//        @media (min-width:826px) and (max-width:991px){
//                    height: 60px;
//                }
//        
//        @media (min-width:641px) and (max-width:825px){
//                    height: 50px;
//                }
        
    }
    
    @media (max-width:$breakpoint_md){
        &:after{
            display: none;
        }
    }
}

