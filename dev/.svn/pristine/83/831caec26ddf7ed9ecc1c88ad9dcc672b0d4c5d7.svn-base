// Footer Styling
#area-BrFooter {
    @media print {
      display: none;
    }
    .curel-footer-wrapper {
        border: none;
        .g-BrFooter__inner {
            padding: 0;
            .g-BrFooterSitemap__list__tile {
                padding: 0;
                border: none;
                max-width: 1060px;
                margin: auto;
                float: none;
                margin: auto;
                position: relative;
                box-sizing: border-box;
                @media (min-width: 1110px) {
                    padding-left: 25px;
                    padding-right: 25px;
                }
                @media(max-width: 767px) {
                    background-color: transparent;
                }
                @media (min-width: 768px) and (max-width: $break-lg) {
                    padding-left: 25px;
                    padding-right: 25px;
                }
                .footer-logo-wrapper {
                    position: absolute !important;
                    left: 25px;
                    top: 0;
                    width: auto;
                    margin: 0;
                    z-index: 90;
                    @media (max-width: $break-lg) {
                        left: 25px;
                    }
                    .g-Image__img {
                        display: inline-block;
                        img {
                            @media (max-width: $break-lg) {
                                max-width: 90px;
                            }
                        }
                    }
                }
                .footer-social-media {
                    padding-top: 32px;
                    .g-BannerLinkP__list {
                        display: flex;
                        justify-content: flex-end;
                        padding-left: 15px;
                        padding-right: 15px;
                        @media (max-width: 767px) {
                            padding-left: 25px;
                            padding-right: 25px;
                            flex-direction: column;
                            margin: 0;
                        }
                        .g-BannerLinkP__list__item {
                            flex-basis: 44px;
                            padding: 0;
                            margin-left: 10px;
                            margin-right: 10px;
                            margin-top: 35px;
                            &:last-child {
                                flex-basis: 470px;
                                margin: 0;
                                @media (min-width: 767px) {
                                    margin-left: 20px;
                                }
                            }
                            @media (max-width: 767px) {
                                &:nth-child(1) {
                                    position: absolute;
                                    right: 60px;
                                    top: 0;
                                    width: auto;

                                }
                                &:nth-child(2) {
                                    position: absolute;
                                    right: 15px;
                                    top: 0;     
                                    width: auto;

                                }
                                &:last-child {
                                    margin-top: 150px !important;
                                    margin-left: 0px;
                                    width: 100%;
                                    flex-basis: auto;
                                }
                            }
                            .g-Image {
                                margin-bottom: 0;
                                .g-Image__img {
                                    img {
                                        transform: scale(1);
                                        transition: 0.4s;
                                        &:hover {
                                            transform: scale(1.1);
                                            transition: 0.4s;
                                        }
                                        @media (max-width: $break-lg) {
                                            max-width: 40px !important;
                                        }
                                    }
                                    .cmn-icon {
                                        display: none;
                                    }
                                }
                            }
                            form {
                                .form {
                                    position: relative;
                                    .g-Text {
                                        text-transform: uppercase;
                                        margin-bottom: 13px;
                                        font-size: 14px;
                                        font-family: $ralewaySemiBold;
                                        @media (max-width: 767px) {
                                            text-align: center;
                                            font-size: 20px;
                                        }
                                    }
                                    .form_row {
                                        .form_leftcol {
                                            display: none;
                                        }
                                        .form_rightcol {
                                            .form_rightcol_wrapper {
                                                position: relative;
                                                padding-bottom: 24px;
                                                input {
                                                    width: 100%;
                                                    height: 42px;
                                                    margin-top: 1px;
                                                    margin-bottom: 1px;
                                                    border: none;
                                                    background-color: #ffffff;
                                                    padding-left: 20px;
                                                    padding-right: 115px;
                                                    box-sizing: border-box;
                                                    color: #a9a9a9;
                                                    font-size: 1.5rem;
                                                    line-height: 42px;
                                                    text-transform: lowercase;
                                                    font-family: $ralewayBold;
                                                }
                                                .help-block {
                                                    position: absolute;
                                                    left: 0;
                                                    bottom: 0;
                                                    width: 100%;
                                                    line-height: 24px;
                                                    font-size: 14px;
                                                    color: $cu-border-color;
                                                }
                                            }
                                            input[type="submit"] {
                                                position: absolute;
                                                right: 0;
                                                top: 36px;
                                                line-height: 42px;
                                                background-color: $footer-sec-color;
                                                text-transform: uppercase;
                                                padding: 0;
                                                border: none;
                                                min-width: 100px;
                                                transition: 0.2s;
                                                font-family: $ralewayBlack;
                                                @media (max-width: 767px) {
                                                    top: auto;
                                                    right: -1px;
                                                    bottom: 25px;
                                                }
                                                &:hover {
                                                    background-color: $primary-hover-color;
                                                    transition: 0.2s;
                                                }
                                            }
                                        }
                                    }
                                    .hidden {
                                        display: none;
                                    }
                                }
                            }
                        }
                    }
                }
                .footer-quick-links {
                    .g-ListP__ul {
                        display: flex;
                        justify-content: flex-end;
                        margin-top: 12px;
                        @media (max-width:767px) {
                            justify-content: flex-start;
                            flex-wrap: wrap; 
                            padding-left: 20px;
                            padding-right: 20px;
                        }
                        .g-ListP__ul__item {
                            position: relative;
                            padding-left: 10px;
                            padding-right: 10px;
                            font-size: 12px;
                            &::after {
                                content: '';
                                width: 4px;
                                height: 4px;
                                background-color: #fff;
                                position: absolute;
                                right: -2px;
                                top: calc(50% - 2px);
                                border-radius: 50%;
                            }
                            &:last-child {
                                padding-right: 0;
                                &::after {
                                    display: none;
                                }
                            }
                            &:first-child {
                                padding-left: 0;
                            }
                            @media (max-width:767px) {
                                width: calc(50% - 10px);
                                padding-left: 5px;
                                padding-right: 5px;
                                &::after {
                                    display: none;
                                }
                                &:first-child {
                                    padding-left: 5px;
                                }
                            }
                            a {
                                text-transform: uppercase;
                                font-family: $ralewaySemiBold;
                                text-decoration: none;
                                color: $solid-white;
                                line-height: 24px;
                                transition: 0.2s;
                                word-break: keep-all;
                                display: block;
                                &:hover {
                                    color: $footer-anchor-hover;
                                    transition: 0.2s;
                                }
                            }
                            .cmn-icon {
                                display: none;
                            }
                        }
                    }
                }
                .copyrights-text {
                    margin-top: 21px;
                    margin-bottom: 35px;
                    font-size: 12px;
                    font-family: $avenirRegular;
                    @media (max-width: 767px) {
                        text-align: center;
                    }
                }
                .newsletter-popup-wrapper {
                    position: fixed;
                    left: 0;
                    top: 0;
                    width: 100%;
                    right: 0;
                    background-color: $modal-blackfade;
                    z-index: 101;
                    height: 100%;
                    box-sizing: border-box;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    visibility: hidden;
                    opacity: 0;
                    transition: 0.5s;
                    @media (max-width: 1200px) {
                        padding-left: 30px;
                        padding-right: 30px;
                    }
                    .newsletter-popup-container {
                        max-width: 1064px;
                        background-color: $solid-white;
                        position: relative;
                        .cls-btn {
                            position: absolute !important;
                            right: 80px;
                            top: 86px;
                            margin-bottom: 0; 
                            cursor: pointer;
                            z-index: 1;
                            @media (max-width: 1200px) {
                                right: 15px;
                                top: 15px;
                            }
                        }
                        .g-HeadingTitle {
                            padding-top: 80px;
                            padding-left: 80px;
                            padding-right: 80px;
                            margin-bottom: 20px;
                            @media (max-width: 1200px) {
                                padding-top: 40px;
                                padding-left: 25px;
                                padding-right: 25px;
                            }
                        }
                        .g-Text {
                            padding-left: 80px;
                            padding-right: 80px;
                            min-height: 311px;
                            margin-bottom: 0;
                            color: $primary-color;
                            font-family: $carousel-text-font;
                            background-image: url(/content/dam/sites/kaousa/www-curel-com/renewal-sites/us/global/pop-up_splash.png);
                            background-position: bottom;
                            background-size: 100%;
                            background-repeat: no-repeat;
                            @media (max-width: 1200px) {
                                padding-right: 25px;
                                padding-left: 25px;
                            }
                            @media (max-width: 768px) {
                                background-image: url(/content/dam/sites/kaousa/www-curel-com/renewal-sites/us/global/mobile_pop-up_splash.jpg);
                            }
                        }
                    }
                    &.open-popup {
                        visibility: visible;
                        opacity: 1;
                        transition: 0.5s;
                        .newsletter-popup-container {
                            -webkit-animation: anvil 1s cubic-bezier(0.38, 0.1, 0.36, 0.9) forwards;
                            visibility: visible;
                            z-index: 200;
                            opacity: 1;
                            @keyframes anvil {
                                0% {
                                  transform: scale(5) rotate(0);
                                  opacity: 0;
                                  box-shadow: 0 0 0 rgba(241, 241, 241, 0);
                                }
                                50% {
                                  transform: scale(1) rotate(-0.2deg);
                                  opacity: 1;
                                  box-shadow: 0 0 0 rgba(241, 241, 241, 0.5);
                                }
                                75% {
                                  transform: scale(1) rotate(0.2deg);
                                  opacity: 1;
                                  box-shadow: 0 0 250px rgba(241, 241, 241, 0.5);
                                }
                                100% {
                                  transform: scale(1) rotate(0);
                                  opacity: 1;
                                  box-shadow: 0 0 500px rgba(241, 241, 241, 0);
                                }
                              }
                        }
                        
                    }
                }
            }
            .g-BrFooterSitemapUnit {
                display: none;
                .g-BrFooterSitemapUnit__panel {
                    &.is-close { 
                        display: block !important;
                    }
                }
            }
        }
        .loader-img {
            background: url(/content/dam/sites/kaousa/www-curel-com/us/global/curel-eclipse-loader.gif) rgba(255, 255, 255, 0.8196078431372549);
            position: fixed;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-repeat: no-repeat;
            background-position: center center;
            z-index: 101;
            margin: 0;
            border: none;
            opacity: 0;
            visibility: hidden;
            transition: 0.3s;
            &.active-loader {
                opacity: 1;
                visibility: visible;
                transition: 0.3s;
            }
        }
    }
}
#area-PageTop {
    box-shadow: 0px 4px 10px -3px $solid-black;
    border-radius: 50%;
    background: none $primary-hover-color !important;
    cursor: pointer;
}