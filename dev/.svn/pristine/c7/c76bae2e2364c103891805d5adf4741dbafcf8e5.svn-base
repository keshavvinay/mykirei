@charset "utf-8";


/* BannerLinkP ================================================== */
.g-BannerLinkP {
  box-sizing: border-box;
  &.is-background {
    padding: $cmn_paddingInner;
  }
  &.is-gutter--none {
    .g-BannerLinkP__list {
      @include gutterItemWrapper(true);
    }
    .g-BannerLinkP__list__item {
      @include gutterItemInner(true);
    }
  }
}

.g-BannerLinkP__list {
  @include gutterItemWrapper();
  padding: 0;
  list-style-type: none;
  @include pie-clearfix;
}

.g-BannerLinkP__list__item {
  float: left;
  @include gutterItemInner();
  vertical-align: top;
}
@include bp(sm) {
  .g-BannerLinkP__list__item-sm-1 {
    width: $cmn_colsWidth_1;
  }
  .g-BannerLinkP__list__item-sm-2 {
    width: $cmn_colsWidth_2;
  }
  .g-BannerLinkP__list__item-sm-3 {
    width: $cmn_colsWidth_3;
  }
  .g-BannerLinkP__list__item-sm-4 {
    width: $cmn_colsWidth_4;
  }
  .g-BannerLinkP__list__item-sm-5 {
    width: $cmn_colsWidth_5;
  }
  .g-BannerLinkP__list__item-sm-6 {
    width: $cmn_colsWidth_6;
  }
}
