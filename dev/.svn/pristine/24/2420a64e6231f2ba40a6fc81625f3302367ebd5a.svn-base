.newsletter-column-separator:focus {
   outline: none !important;
}
.newsletter-column-separator .newsletter-message {
   width: 50%;
   margin: auto;
}
.newsletter-column-separator .g-Hr.wave hr {
   transform: translateX(0);
   margin-left: auto;
   margin-right: auto;
   margin-top: 2rem;
   margin-bottom: 3rem;
}
.newsletter-column-separator .errorPage {
   display: none;
}
.newsletter-column-separator form[name="guhl_newsletter"] {
   width: 60%;
   margin: auto;
}
.newsletter-column-separator form[name="guhl_newsletter"] .g-Text {
   font-size: 18px;
   font-weight: 700;
   line-height: 14px;
   margin-bottom: 25px;
}
.newsletter-column-separator form[name="guhl_newsletter"] .form_row .form_rightcol_wrapper {
   height: 45px;
   outline: none;
   border: 1px solid #000000;
   width: 100%;
   margin-bottom: 15px;
   box-sizing: border-box;
}
.newsletter-column-separator form[name="guhl_newsletter"] .form_row .form_rightcol:focus {
   outline: none;
}
.newsletter-column-separator form[name="guhl_newsletter"] .form_row input {
   width: 100%;
   height: 100%;
   padding: 13px;
   border: none;
   box-sizing: border-box;
   letter-spacing: 3px;
   font-weight: 700;
   font-size: 16px;
}
.newsletter-column-separator form[name="guhl_newsletter"] .form_row.tc-inputbox .form_rightcol {
   float: left;
}
.newsletter-column-separator form[name="guhl_newsletter"] .form_row.tc-inputbox .form_rightcol input {
   width: 13px;
   height: 13px;
   float: left;

}
.newsletter-column-separator form[name="guhl_newsletter"] #tc_text {
   font-size: 12px;
   font-weight: 300;
   letter-spacing: -0.1px;
}
.newsletter-column-separator form[name="guhl_newsletter"] .form_row input::placeholder {
   color: #d2d2d2;
}
.newsletter-column-separator form[name="guhl_newsletter"] .error {
   display: none;
   color: #d9534f;
   font-weight: 300;
   letter-spacing: -.1px;
}
.newsletter-column-separator form[name="guhl_newsletter"] #accordian_headline {
   margin-top: 50px;
}
.newsletter-column-separator form[name="guhl_newsletter"] .gender-wrapper .gender-container {
   display: inline-block;
   height: 45px;
   border: 1px solid #000000;
   padding: 10px;
   box-sizing: border-box;
   position: relative;
   cursor: pointer;
}
.newsletter-column-separator form[name="guhl_newsletter"] .gender-wrapper .gender-container .form_rightcol {
   display: flex;
   float: left;
   width: 100%;
   height: 100%;
   justify-content: center;
   align-items: center;
   font-weight: 700;
   letter-spacing: 3px;
   line-height: 15px;
}
.newsletter-column-separator form[name="guhl_newsletter"] .gender-wrapper .gender-container .form_rightcol input {
   opacity: 0;
   position: absolute;
   left: 0;
   top: 0;
   width: 100%;
   height: 100%;
   z-index: 1;
   visibility: hidden;
}
.newsletter-column-separator form[name="guhl_newsletter"] .gender-wrapper .gender-container:first-child {
   border-right: 1px solid #000000;
}
.newsletter-column-separator form[name="guhl_newsletter"] .gender-wrapper .gender-container:last-child {
   border-left: 1px solid #000000;
   margin-left: -1px;
}
.newsletter-column-separator form[name="guhl_newsletter"] .g-AccordionMenu {
   margin-bottom: 40px;
}
.newsletter-column-separator form[name="guhl_newsletter"] .g-AccordionMenu .l-AccordionUnit__titleBlock {
   background-color: transparent;
   border: none;
   border-bottom: 2px solid #000000;
}
.newsletter-column-separator form[name="guhl_newsletter"] .g-AccordionMenu .l-AccordionUnit__titleBlock .g-HeadingTitle .g-HeadingTitle__h3 {
   font-weight: 700;
   font-size: 18px;
}
.newsletter-column-separator form[name="guhl_newsletter"] .g-AccordionMenu .g-AccordionUnit__contentBlock {
   padding: 0;
   border: none;
}
.newsletter-column-separator form[name="guhl_newsletter"] .g-AccordionMenu .g-AccordionUnit.is-radius--open .l-AccordionUnit__titleBlock {
   border-bottom-color: transparent;
}
.newsletter-column-separator form[name="guhl_newsletter"] .g-AccordionMenu .g-AccordionUnit__contentBlock .form_row {
   height: 30px;
   display: inline-block;
   margin: 8px 13px 8px 0;
}
.newsletter-column-separator form[name="guhl_newsletter"] .g-AccordionMenu .g-AccordionUnit__contentBlock .form_row .form_rightcol {
   height: 30px;
   min-width: 90px;
   position: relative;
   text-align: center;
   border: 1px solid #000000;
   box-sizing: border-box;
   letter-spacing: -.1px;
   text-indent: -10px;
   cursor: pointer
}
.newsletter-column-separator form[name="guhl_newsletter"] .g-AccordionMenu .g-AccordionUnit__contentBlock .form_row .form_rightcol input {
   position: absolute;
   left: 0;
   top: 0;
   width: 100%;
   height: 100%;
   opacity: 0;
   z-index: 1;
   cursor: pointer;
}
.newsletter-column-separator form[name="guhl_newsletter"] .g-AccordionMenu .radio .g-AccordionUnit__contentBlock .form_row .form_rightcol input {
   visibility: hidden;
}
.newsletter-column-separator form[name="guhl_newsletter"] .g-AccordionMenu .g-AccordionUnit__titleBlock__icon.cmn-icon::before {
   color: #000000;
   float: right;
   margin-left: 5px;
   font-size: 24px;
   font-weight: 700;
   letter-spacing: 1px;
   line-height: 26px;
   text-align: center;

}
.newsletter-column-separator form[name="guhl_newsletter"] .g-AccordionMenu .g-AccordionUnit__titleBlock__icon.cmn-icon--down::before {
   content: '\002B';
}
.newsletter-column-separator form[name="guhl_newsletter"] .g-AccordionMenu .g-AccordionUnit__titleBlock__icon.cmn-icon--up::before {
   content: "\2212";
}
.newsletter-column-separator form[name="guhl_newsletter"] .form_leftcol {
   display: none;
}
.newsletter-column-separator form[name="guhl_newsletter"] .required {
   font-size: 12px;
   font-weight: 300;
   letter-spacing: -.1px;
   margin-left: 20px;
}
.newsletter-column-separator form[name="guhl_newsletter"] .form_rightcol .form_button_submit {
   width: auto;
   margin: auto;
   display: inherit;
   color: #d2d2d2;
   background-color: transparent;
   border: 1px solid #d2d2d2;
}
.newsletter-column-separator form[name="guhl_newsletter"] .form_rightcol  {
   position: relative;
}
.newsletter-column-separator form[name="guhl_newsletter"] .form_rightcol .correct {
   position: absolute;
   right: 2%;
   top: 5px;
   color: #5cb85c;
   font-family: ConduitITCStd-Bold;
   font-size: 24px;
}
.thank-you-section-wrapper .newsletter-column-separator .g-Text {
   width: 50%;
   margin: auto;
   letter-spacing: -.1px;
}
.thank-you-section-wrapper  .newsletter-column-separator  .thank-you-relaed-content-column-unit {
   padding-left: 6%;
   padding-right: 6%;
}


@media (max-width: 640px) {
   .newsletter-column-separator .newsletter-message {
      width: 100%;
   }
   .newsletter-column-separator form[name="guhl_newsletter"] .g-Text {
      letter-spacing: 0px;
      line-height: 24px;
   }
   .newsletter-column-separator form[name="guhl_newsletter"] {
      width: 100%;
   }
   .newsletter-column-separator form[name="guhl_newsletter"] .form_row.tc-inputbox .form_rightcol input {
      margin-top: 6px;
   }
   .thank-you-section-wrapper .g-Text  {
      width: 100%;
   }
   .thank-you-section-wrapper .thank-you-relaed-content-column-unit {
      padding-left: 0;
      padding-right: 0;
   }
}