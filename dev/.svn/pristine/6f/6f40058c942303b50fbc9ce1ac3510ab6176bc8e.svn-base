form[name="goldwell-contact-us"] {
    .form {
        margin-left: -15px;
        margin-right: -15px;
        .form_row {
            float: left;
            width: 50%;
            padding-left: 15px;
            padding-right: 15px;
            box-sizing: border-box;
            @media (max-width: $header-break-md) {
                width: 100%;
            }
        }
        .form_row_description {
            display: none;
        }
        .g-GroupBox {
            float: left;
            width: 50%;
            @media (max-width: $header-break-md) {
                width: 100%;
            }
        }
        .g-GroupBox .form_row {
            width: 100%;    
        }
        .checkbox-wrapper .form_row {
            width: auto !important;
        }
        .g-GroupBox.custom-dropdown-wrapper {
            width: calc(100% - 30px) !important;
        }
        .textarea-wrapper {
            width: 100% !important;
            margin-bottom: 30px;
        }
        .textarea-wrapper textarea {
            width: 100% !important;
            height: 180px !important;
        }
        .form-button-wrapper {
            width: 100%;
        }
        .callback_cb {
            width: 50% !important;
            margin-bottom: 0;
            @media (max-width: $header-break-md) {
                width: 100% !important;
            }
        }
        .checkbox.callback_cb .form_row:first-child {
            display: block;
            width: 100% !important;
            padding: 0;
        }
        .checkbox .form_row:first-child .form_rightcol {
            height: auto;
            width: 100%;
            border: none;
        }
        .checkbox .form_row:first-child .form_rightcol input {
            position: relative;
            height: 40px;
            opacity: 1;
        }
        .hidden {
            display: none !important;
        }
        .checkbox.callback_cb .form_row.callback_btn {
            width: 100% !important;
            padding: 0;
            display: none;
        }
        .checkbox.callback_cb .form_row.callback_btn .form_rightcol {
            height: auto;
            border: none;
            padding-left: 20px;
            width: auto;
        }
        .checkbox.callback_cb .form_row.callback_btn {
            position: relative;
            margin: 0;
            &::before {
                content: '';
                width: 15px;
                height: 15px;
                position: absolute;
                left: 0;
                top: 0;
                border: 2px solid $solid-black;
            }
        }
        .callback_cb .help-block {
            bottom: -20px;
            @media (max-width: $header-break-md) {
                bottom: 0;
                position: relative;
                left: 0;
            }
        }
        .checkbox.callback_cb .form_row.callback_btn.active {
            &::before {
                border-color: $primary;
                background-color: $primary;
            }
        }
        .checkbox.callback_cb .form_row.active .form_rightcol {
            background-color: transparent !important;
            border-color: transparent !important;
        }
        .checkbox.callback_cb .form_row.callback_btn .form_rightcol {
            height: auto;
            border: none;
            padding-left: 20px;
            width: auto;
        }
        .checkbox.callback_cb .form_row.callback_btn .form_rightcol input {
            position: absolute;
            left: 0;
            top: 0;
            width: 20px;
            height: 20px;
            z-index: 1;
        }
    }
}