//Brand header fixed
#area-BrHeader {
    max-width: 1920px;
    margin: 0 auto;

    &::before {
        content: "";
        width: 100%;
        top: 50px;
        height: 1px;
        background-color: $primary-color;
        position: absolute;
        left: 0;
    }

    @media (max-width: $break-lg) {
        &::before {
            display: none;
        }
    }

    .curel-header-wrapper {
        max-width: 1060px;
        margin: 0 auto;
        position: relative;
        z-index: 101;

        @media (max-width: $break-lg) {
            position: fixed;
            left: 0;
            top: 0;
            width: 100%;
            z-index: 100;
        }

        .curel-logo-wrapper {
            position: absolute;
            left: 0px;
            top: 0;
            z-index: 2;

            @media (max-width: $break-lg) {
                left: 25px;

                .g-Image {
                    img {
                        max-width: 90px;
                    }
                }
            }

            @media (min-width: 1025px) and (max-width: 1110px) {
                left: 25px;
            }
        }

        .menu-toggle {
            position: absolute;
            right: 0;
            top: 0;
            min-height: 70px;
            background-color: $header-background;
            width: 100%;
            z-index: 1;

            .g-Text {
                margin-bottom: 0px;
                position: absolute;
                right: 80px;
                top: calc(50% - 16px);
                font-size: 18px;
                font-family: $ralewaySemiBold;
                padding: 8px 0px;
                line-height: 1;
                color: $primary-hover-color;
                cursor: pointer;

                &.menu-close {
                    &::before {
                        content: "MENU";
                        position: absolute;
                        left: 0;
                        top: 0;
                        line-height: 32px;
                        background-color: #e7f5f6;
                    }
                }

                &.menu-open {
                    &::before {
                        content: "Close";
                        position: absolute;
                        left: 0;
                        top: 0;
                        line-height: 32px;
                        background-color: #e7f5f6;
                    }
                }
            }
        }

        .curel-search-section {

            .form-control {
                .form-control-search-wrapper {
                    position: absolute;
                    right: 0px;
                    top: 7px;
                    @media (max-width: $break-lg) {
                        position: absolute;
                        right: 0px;
                        left: 0px;
                        top: 70px;
                        visibility: hidden;
                        opacity: 0;
                        z-index: 2;
                        transition: 0.4s;
                    }
                    .mf_finder_header {
                        .mf_finder_searchBox {
                            margin: 0;
                            border: 1px solid #555555;
                            width: 174px;
                            @media (max-width: $break-lg) {
                                border: none;
                                width: 50%;
                                float: right;
                                margin-right: 25px;
                            }

                            .mf_finder_searchBox_items {
                                padding: 0;
                                @media (max-width: $break-lg) {
                                    border-radius: 0;
                                    border: 5px solid $cu-border-color;
                                }

                                .mf_finder_searchBox_query_wrap input {
                                    border: none;
                                }

                                .mf_finder_searchBox_submit {
                                    background-color: $solid-white;
                                    border-radius: 0;

                                    span {
                                        margin: 0;
                                    }
                                }

                                .mf_finder_searchBox_submit:before {
                                    font-size: 20px;
                                    color: $primary-hover-color;
                                    margin: 0;
                                    @media (max-width: $break-lg) {
                                        background-color: $solid-white; 
                                    }
                                }
                            }
                        }
                    }
                }
            }

            @media (max-width  : $break-lg){
                .open-close-toggle {
                    @media (max-width: $break-lg) {
                        width: 32px;
                        height: 32px;
                        position: fixed;
                        right: 25px;
                        top: 19px;
                        z-index: 1;
    
                        &::before {
                            content: "\e986";
                            font-family: icomoon;
                            line-height: 32px;
                            font-size: 20px;
                            text-align: center;
                            position: absolute;
                            left: 0;
                            top: 0;
                            width: 100%;
                            color: $primary-hover-color;
                        }
                    }
                }
                &.active {
                    .form-control-search-wrapper {
                        visibility: visible;
                        opacity: 1;
                        transition: 0.4s;
                    }
                }
            }
        }

        .curel-menu-wrapper {
            display: flex;
            flex-direction: column;

            @media (max-width: $break-lg) {
                display: none;
            }

            @media (min-width: $break-lg) {
                flex-direction: column-reverse;
            }

            @media (max-width: $break-lg) {
                position: fixed;
                top: 70px;
                left: 0;
                width: 100%;
                background-color: $modal-blackfade;
                overflow-y: scroll;
                overflow-x: hidden;
                height: calc(100% - 70px);
            }

            .curel-top-nav-wrapper {
                padding: 9px 0;

                @media (min-width: $break-lg) {
                    padding-right: 18%;
                }

                @media (min-width: 1025px) and (max-width: 1110px) {
                    padding-right: 200px;
                }

                @media (max-width: $break-lg) {
                    background-color: $dropdown-hover-color;
                    padding: 0;
                }

                .curel-top-nav {
                    display: flex;
                    justify-content: flex-end;

                    @media (max-width: $break-lg) {
                        flex-direction: column;
                        padding: 15px 0;
                        display: none;
                    }

                    li {
                        .g-ListP {
                            margin-bottom: 0;

                            .g-ListP__ul {
                                display: flex;

                                @media (max-width: $break-lg) {
                                    flex-direction: column;
                                }

                                li {
                                    display: block;
                                    padding: 0 15px;

                                    @media (max-width: $break-lg) {
                                        padding: 15px 57px 15px 0px;
                                        text-align: right;
                                    }

                                    a {
                                        text-decoration: none;
                                        color: $primary-color;
                                        line-height: 32px;
                                        font-size: 0.875rem;
                                        transition: 0.3s;
                                        font-family: $ralewayRegular;

                                        @media (max-width: $break-lg) {
                                            color: $mobile-light-white;
                                            font-size: 18px;
                                            line-height: 1;
                                            font-family: $ralewayRegular;
                                        }

                                        .cmn-icon {
                                            display: none;
                                        }
                                    }
                                }
                            }
                        }

                        .g-BannerLinkP {
                            @media (max-width: $break-lg) {
                                padding-right: 57px;
                                text-align: right;
                            }

                            .g-BannerLinkP__list {
                                margin: 0;
                                display: inline-block;

                                li {
                                    padding: 0 5px;

                                    @media (max-width: $break-lg) {
                                        max-width: 40px;
                                    }

                                    &:last-child {
                                        padding-right: 0;
                                    }

                                    &:first-child {
                                        padding-left: 0;
                                    }

                                    .g-Image {
                                        margin-bottom: 0;

                                        img {
                                            margin: 0;
                                        }

                                        .cmn-icon {
                                            display: none;
                                        }
                                    }
                                }
                            }
                        }
                    }
                }

                .sub-menu-toggle {
                    width: 100%;
                    border: none;
                    height: 50px;
                    display: block;
                    background-color: $submenu-background-color;
                    display: none;

                    @media (max-width: $break-lg) {
                        display: block;
                    }

                    span {
                        width: 60px;
                        height: 20px;
                        display: block;
                        margin: auto;
                        position: relative;

                        &::before {
                            content: "";
                            width: 50%;
                            height: 2px;
                            background-color: $solid-white;
                            position: absolute;
                            right: 4px;
                            top: 0;
                            transform: rotate(-30deg);
                            transform-origin: right;
                            transition: 0.5s;
                        }

                        &::after {
                            content: "";
                            width: 50%;
                            height: 2px;
                            background-color: $solid-white;
                            position: absolute;
                            left: 4px;
                            top: 0;
                            transform: rotate(30deg);
                            transform-origin: left;
                            transition: 0.5s;
                        }
                    }

                    &.active {
                        span {
                            &::before {
                                top: auto;
                                bottom: 0;
                                transform: rotate(30deg);
                                transition: 0.5s;
                            }

                            &::after {
                                top: auto;
                                bottom: 0;
                                transform: rotate(-30deg);
                                transition: 0.5s;
                            }
                        }
                    }
                }
            }

            .curel-nav-menu-wrapper {
                @media (max-width: $break-lg) {
                    background-color: $submenu-background-color;
                }

                @media (min-width: $break-xl) {
                    margin-top: 57px;
                }

                .curel-nav-menu {
                    display: flex;
                    justify-content: flex-end;

                    @media (max-width: $break-lg) {
                        flex-direction: column;
                        text-align: right;
                        padding-top: 16px;
                    }

                    @media (min-width: 1110px) {
                        margin-left: -25px;
                        margin-right: -25px;
                    }

                    li {
                        position: relative;
                        &.menu-dropdown:last-child .menu-dropdown-wrapper {
                            @media (min-width: $break-lg) {
                                right: 0;
                                left: auto;
                            }
                        }
                        .g-ListP {
                            margin-bottom: 0;

                            .g-ListP__ul {
                                li {
                                    display: flex;
                                    padding: 17px 25px;

                                    @media (max-width: $break-lg) {
                                        padding: 15px 57px 15px 0px;
                                        justify-content: flex-end;
                                    }

                                    a {
                                        text-decoration: none;
                                        font-size: 0.875rem;
                                        text-transform: capitalize;
                                        font-family: $ralewaySemiBold;
                                        color: $primary-hover-color;
                                        transition: 0.2s;

                                        @media (max-width: $break-lg) {
                                            color: $solid-white;
                                            font-size: 18px;
                                            font-family: $ralewayBold;
                                        }

                                        .cmn-icon {
                                            display: none;
                                        }
                                    }
                                }
                            }
                        }
                        .g-ListP.fr-prod-menu{
                            .g-ListP__ul {
                                li {
                                    a {
                                        text-transform: none; 
                                    } 
                                }
                            }
                        }
                        .menu-dropdown-wrapper {
                            position: absolute;
                            left: 0;
                            top: 100%;
                            min-width: 430px;
                            box-shadow: 0px 10px 26px 0px rgba(0, 0, 0, 0.23137254901960785);
                            background-color: $primary-hover-color;
                            opacity: 0;
                            padding-top: 25px;
                            padding-bottom: 25px;
                            visibility: hidden;
                            transition: 0.1s;

                            @media (max-width: $break-lg) {
                                display: none;
                                position: relative;
                                opacity: 1;
                                visibility: visible;
                                width: 100%;
                                left: 0;
                                min-width: initial;
                                top: 0;
                                background-color: $dropdown-hover-color;
                                padding: 0;
                                box-shadow: none;
                                transition: 0s !important;
                            }

                            .g-ListP {
                                .g-ListP__ul {
                                    .g-ListP__ul__item {
                                        padding: 10px 25px;

                                        @media (max-width: $break-lg) {
                                            background-color: $dropdown-hover-color;
                                            padding: 10px 57px;
                                        }

                                        a {
                                            color: $solid-white;
                                            line-height: 1;
                                            box-shadow: none;

                                            @media (max-width: $break-lg) {
                                                font-size: 15px;
                                                font-family: $ralewaySemiBold;
                                            }
                                        }

                                        &:hover {
                                            a {
                                                box-shadow: none;
                                                font-family: $ralewayExtraBold;
                                            }

                                            background-color: $dropdown-hover-color;
                                        }
                                    }
                                }
                            }
                        }

                        &:hover {
                            .g-ListP {
                                .g-ListP__ul {
                                    li {
                                        background-color: $primary-hover-color;

                                        @media (max-width: $break-lg) {
                                            background-color: transparent;
                                        }

                                        a {
                                            color: $solid-white;
                                            transition: 0.2s;
                                        }
                                    }
                                }
                            }

                            .menu-dropdown-wrapper {
                                opacity: 1;
                                visibility: visible;
                                transition: 0.2s;
                            }
                        }

                        &.menu-dropdown {
                            &>.g-ListP {
                                .g-ListP__ul {
                                    .g-ListP__ul__item {
                                        @media (max-width: $break-lg) {
                                            &::before {
                                                content: "";
                                                width: 0;
                                                height: 0;
                                                border-top: 8px solid transparent;
                                                border-left: 14px solid $solid-white;
                                                border-bottom: 8px solid transparent;
                                                position: absolute;
                                                right: 32px;
                                                top: calc(50% - 8px);
                                                transform: rotate(0);
                                                transform-origin: center;
                                                transition: 0.5s;
                                            }
                                        }
                                    }
                                }
                            }

                            &.active-menu {
                                &>.g-ListP {
                                    .g-ListP__ul {
                                        .g-ListP__ul__item {
                                            @media (max-width: $break-lg) {
                                                &::before {
                                                    transform: rotate(90deg);
                                                    transform-origin: center;
                                                    transition: 0.5s;
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
    &.article-banner-hide .curel-header-banner {
        display: none;
    }
}