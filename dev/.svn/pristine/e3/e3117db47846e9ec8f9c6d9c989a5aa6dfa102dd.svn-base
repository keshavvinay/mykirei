@charset "utf-8";
/*your_look_results_header*/
.jf-your_look_results_header {
  @include bp(lg) {
    position: relative;
  }
  .l-Section__inner {
    @include bp(lg) {
      padding: 54px 18px;
    }
    @include bp(md) {
      padding: 51px 17px;
    }
    @include bp(sm) {
      padding: 45px 15px;
    }
  }
  .l-Image {
    margin-bottom: 0;
  }
  .l-HeadingTitle__titleBlock__titleBox {
    .l-HeadingTitle__h2 {
      display: block;
      letter-spacing: 0;
      font-size: 3rem;
      text-transform: none;
      &:after {
        content: "";
        display: block;
        width: 1rem;
        height: 1px;
        background: #ffffff;
        margin: 0.6875rem auto;
      }
    }
    .l-Text {
      font-size: 1rem;
    }
  }
  .l-Text {
    p{
      width: 90%;
      margin: 0 auto;
      font-size: 16px;
      line-height: 1.2;
    }
  }
  .l-ImageTextHP__contentsBlock__text {
    .l-Text:nth-child(3n) {
      display: inline-block;
      margin-top: 1rem;
      padding-right: 5px;
      .is-authorring & {
        display: block;
      }
      p {
        display: inline-block;
        width: auto;
      }
      .l-Text:nth-child(2n) {
        display: inline-block;
        .is-authorring & {
          display: block;
        }
        @include bp(md) {
          display: none;
          .is-authorring & {
            display: block;
          }
        }
        @include bp(sm) {
          display: none;
          .is-authorring & {
            display: block;
          }
        }
      }
    }
    .l-Text:last-child {
      div:last-child{
        display: inline-block;
      }
    }
  }
  .l-ImageTextHP__contentsBlock__image {
    padding: 0 !important;
    img{
      @include bp(md) {
        width: 115% !important;
      }
    }
  }
  .l-ImageTextHP__contentsBlock {
    @include bp(lg) {
      overflow: hidden;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
      display: -ms-flexbox;
      display: flex;
      -ms-flex-align: center;
      align-items: center;
      -ms-flex-pack: center;
      justify-content: center;
      .is-authorring & {
        overflow: visible;
      }
    }
    @include bp(md) {
      overflow: hidden;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
      display: -ms-flexbox;
      display: flex;
      -ms-flex-align: center;
      align-items: center;
      -ms-flex-pack: center;
      justify-content: center;
      .is-authorring & {
        overflow: visible;
      }
    }
    &:after {
      display: block;
    }
  }
  .l-ImageTextHP__contentsBlock__text {
    &:before {
      content: '';
      display: inline-block;
      vertical-align: middle;
      height: 100%;
    }
  }
// Shariff
.shariff-wrapper {
  position: relative;
  display: inline-block;
  width: 140px;
  height: 30px;
}
.shariff {
  position: absolute;
  top: 8px;
  left: 0;
}
}