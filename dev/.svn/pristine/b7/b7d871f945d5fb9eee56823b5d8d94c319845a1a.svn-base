body {
  margin: 0;
  padding: 0;
  transition: 0.5s ease padding;
  font-size: 16px;
  max-width: 1920px;
  margin: auto;
  background-color: #fff;
  @media (max-width: $break-lg) {
    padding-top: 70px;
  }
}
.l-Text {
  font-size: 16px;
  letter-spacing: 0px;
  ul {
    list-style-type: disc;
    padding-left: 20px;
  }
}
button {
  outline: none !important;
}

a {
  text-decoration: underline;
}
a:hover {
  text-decoration: none;
}
p {
  letter-spacing: 0px;
}
ul {
  margin: 0;
  padding: 0;
  list-style-type: none;
}
.g-Section {
  max-width: 1060px;
  margin: auto;
}
.g-Section__inner {
  max-width: 1920px;
}
@media (min-width: $break-xl) {
  .hide-lg {
    display: none;
  }
}
@media (max-width: $break-sm) {
  .hide-sm {
    display: none !important;
  }
}
@media (min-width: $break-md) and (max-width: 768px) {
  .opt-3-responsive-col {
    .g-Column__inner {
      .g-Column__cols {
        margin-bottom: 30px;
        &:last-child {
          margin-bottom: 0;
        }
      }
    }
  }
}

#area-Contents {
  font-family: $avenirRegular;
  .g-Section {
    @media (min-width: 1110px) {
      max-width: 1110px;
    }
    &.curel-inner-banner-wrapper {
      @media (min-width: 1110px) {
        max-width: 100%;
      }
    }
    &.curel-home-carousel {
      @media (min-width: 1110px) {
        max-width: 100%;
      }
    }
  }
}

.text-float-left {
  .g-ImageTextHP__contentsBlock {
    .g-ImageTextHP__contentsBlock__image {
      padding-left: 28px !important;
      @media print {
        max-width: 400px;
      }
      @media (max-width: 640px) {
        padding-left: 0 !important;
      }
    }
    .g-ImageTextHP__contentsBlock__text {
      float: none;
      width: 100%;
      display: block;
      .g-HeadingTitle {
        display: block;
        .g-HeadingTitle__titleBlock {
          display: block;
        }
      }
    }
  }
}
.text-float-right {
  .g-ImageTextHP__contentsBlock {
    .g-ImageTextHP__contentsBlock__image {
      padding-right: 28px !important;
      @media print {
        max-width: 400px;
      }
      @media (max-width: 640px) {
        padding-right: 0 !important;
      }
    }
    .g-ImageTextHP__contentsBlock__text {
      float: none;
      width: 100%;
      display: block;
      .g-HeadingTitle {
        display: block;
        .g-HeadingTitle__titleBlock {
          display: block;
        }
      }
    }
  }
}

@media print {
  .no-print {
    display: none;
  }
}

.float-right-parent {
  @media (min-width: $break-md) {
    float: right;
  }
}
.curel-country-select-wrapper {
  @media (max-width: $break-sm) {
    margin-top: -75px;
  }
}

// News index pack
.g-NewsIndexUnit--v3__summary {
  letter-spacing: 0px;
}
.g-BVReviewSection div[data-bv-show="review_highlights"] {
  display: none;
}