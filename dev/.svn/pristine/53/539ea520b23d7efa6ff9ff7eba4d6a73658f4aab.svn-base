.new {
	margin:0px!important;
}

.is-titlebar {
	padding-left:1em;
	text-align:left;
	border-bottom:dotted 1px #4178cd;
	background-color:#eef;
	font-size:11px;
    font-family:adobe-clean,Helvetica,Arial,sans-serif!important;
	color:#4178cd;
	padding-top:3px;
	padding-bottom:3px;
}

.is-titlebar.common_section_wrapper-titlebar {
	background-color:#ddd;
	border-bottom:dotted 1px #333;
	color:#333;
	margin:0px;
}
.common_section_wrapper-title {
	display:inline-block;
}

.common_section_wrapper-options {
	display:inline-block;
}
.is-titlebar.common_column_separator-titlebar,
.is-titlebar.common_column_unit-titlebar {
	background-color:#efe;
	border-bottom:dotted 1px #9c9;
	color:#393;
}
.common_column_separator-title {
	display:inline-block;
}

.common_column_separator-options {
	display:inline-block;
}

.is-titlebar.common_group_box-titlebar {
	background-color:#fee;
	border-bottom:dotted 1px #c99;
	color:#933;
}

/** add buttons **/
.common_add_section {
	font-size:11px;
}
.common_add_column {
	font-size:11px;
}

/** inplace editor **/
.common_inplace_editor[contenteditable="true"]{
	border:dotted 1px #ccc;
}

/** label/tag pack **/
.common_label_tag_element {
	display: inline-block;
}

/** component styles **/
/** accordion menu **/
.g-AccordionUnit__contentBlock{
	display: block !important;
	height: auto !important;
}

/* pageTitle/headingTitle style */
.is-subTitleRight .g-PageTitle__titleBlock__titleBox .subTitle,
.is-subTitleRight .g-HeadingTitle__titleBlock__titleBox .subTitle {
  display: inline-block;
  vertical-align: baseline;
}
.is-subTitleRight .g-PageTitle__titleBlock__titleBox .g-Text ,
.is-subTitleRight .g-HeadingTitle__titleBlock__titleBox .g-Text {
  min-width: 100px;
}
.is-subTitleRight .g-PageTitle__titleBlock__titleBox .g-Text p:not(.cmn-richtext),
.is-subTitleRight .g-HeadingTitle__titleBlock__titleBox .g-Text p:not(.cmn-richtext) {
  margin: 0;
}
.is-subTitleRight .g-PageTitle__titleBlock__titleBox__title,
.is-subTitleRight .g-HeadingTitle__titleBlock__titleBox__title {
  min-width: 100px;
  vertical-align: baseline;
}
