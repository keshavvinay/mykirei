.sofina-lesson-section_flow__home {
  position: relative;
  padding: 50px 0;
  &:before,
  &:after {
    content: "▼";
    position: absolute;
    @include hMiddle();
  }
  &:before {
    top: 10px;
  }
  &:after {
    bottom: 10px;
  }
  .g-ColumnUnit {
    display: table;
    background-color: #f5f5f5;
    width: 100%;
    padding: 30px 35px;
  }
  .sofina-lesson-section_flow__home__left {
    display: table-cell;
    vertical-align: middle;
    padding-right: 15px;
    .l-HeadingTitle__h4 {
      font-weight: normal;
      font-size: $fontSize_lv5;
    }
    .l-Text {
      font-size: $fontSize_lv7;
    }
  }
  .sofina-lesson-section_flow__home__right {
    display: table-cell;
    width: 130px;
    vertical-align: middle;
  }
  @include bp(sm) {
    .g-ColumnUnit {
      display: block;
      padding: 20px 10px;
    }
    .sofina-lesson-section_flow__home__left {
      display: block;
      padding-right: 0;
      .l-HeadingTitle__h4 {
        font-size: $fontSize_lv7;
      }
      .l-Text {
        font-size: $fontSize_sm_caption;
      }
    }
    .sofina-lesson-section_flow__home__right {
      display: block;
      margin: 0 auto;
    }
  }
}

.sofina-lesson-section_flow__finish {
  padding: 30px 0;
  .l-Text {
    @include fontSize(lv5); //18px
    color: $colorGray_2;
    text-align: center;
    margin-bottom: 0;
  }
  border-bottom: solid 1px $colorGray_5;
  /*-----------------------*/
  // sm
  /*-----------------------*/
  @include bp(sm) {
    padding: 20px 0;
  }
}
.sofina-lesson-section_flow__cap {
  .cmn-richtext{
    padding-top: 17px;
    @include fontSize(caption); //12px
  }
}

