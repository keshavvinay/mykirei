.sofina-lesson-section_about {
  .g-Column__inner {
    padding-left: 50px;
    padding-right: 50px;
  }
  /*-----------------------*/
  // md
  /*-----------------------*/
  @include bp(md) {
    .g-Column__inner {
      padding-left: 0;
      padding-right: 0;
    }
  }
  /*-----------------------*/
  // sm
  /*-----------------------*/
  @include bp(sm) {
    font-family: $fontFamily_Gothic;
    .g-Column__inner {
      padding-left: 0;
      padding-right: 0;
    }
  }
}

.sofina-lesson-section_about__cont {
  //タイトル
  .l-HeadingTitle__h3 {
    @include fontSize(lv4); //20px
    color: $colorGray_2;
    line-height: 1.5;
    font-weight: normal;
  }
  //説明
  .l-Text {
    padding-top: 15px;
    @include fontSize(lv6); //16px
    color: $colorGray_2;
    line-height: 1.6;
    font-weight: normal;
  }
  /*-----------------------*/
  // sm
  /*-----------------------*/
  @include bp(sm) {
    .l-HeadingTitle {
      margin-bottom: 0;
    }
    .l-HeadingTitle__h3 {
      font-family: $fontFamily_Gothic;
    }
  }
}

.sofina-lesson-section_about__cont__txtholder {
  padding-right: 30px;
  /*-----------------------*/
  // sm
  /*-----------------------*/
  @include bp(sm) {
    padding-right: 0px;
  }
}

.sofina-lesson-section_about__cont__imgholder {
  padding-right: 80px;
  /*-----------------------*/
  // md
  /*-----------------------*/
  @include bp(md) {
    padding-right: 0px;
  }
  /*-----------------------*/
  // sm
  /*-----------------------*/
  @include bp(sm) {
    padding-right: 0px;
  }
}

.sofina-lesson-section_about__pdflink {
  margin-top: 30px;
  margin-bottom: 40px;
  @include bp(sm) {
    margin-top: 15px;
    margin-bottom: 30px;
  }
  .l-LinkButton {
    a {
      border: 1px solid $colorGray_5;
      max-width: 560px;
      min-width: 480px;
      width: 65%;
      margin: 0 auto;
      padding: 20px 10px;
      display: block;
      text-align: center;
      @include bp(sm) {
        width: 100%;
        min-width: 0;
        max-width: none;
        margin: 0;
        padding: 10px 10px 10px 25px;
        text-align: left;
      }
      &:hover {
        background-color: #f5f5f5;
        opacity: 1;
      }
      .cmn-richtext {
        position: relative;
        font-size: $fontSize_lv5;
        &:before {
          position: absolute;
          top: 50%;
          left: -8px;
          margin-top: -3px;
        }
        &:after {
          margin-bottom: 3px;
        }
        @include bp(sm) {
          max-width: 410px;
          font-size: $fontSize_sm_lv5;
          margin: 0 auto;
          display: block;
        }
      }
    }
  }
}

