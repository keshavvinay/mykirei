////////////////////////////////////
//
// セクション（概要）
//
////////////////////////////////////
.sofina-section--lessonSummary {
  .g-Section__inner {
    padding-left: 82px;
    padding-right: 82px;
    @include bp(sm) {
      padding-bottom: 0;
    }
  }
  //タイトル（背景色をフローと同じにしてくっつける）
  .sofina-lessonSummary__bps {
    background-color: #f5f5f5;
    padding-top: 24px;
    .l-HeadingTitle {
      margin-bottom: 24px;
    }
    .l-HeadingTitle__h2 {
      @include fontSize(lv2);
      font-family: $fontFamily_Title;
      font-weight: normal;
      @include bp(lg) {
        letter-spacing: 0.06em;
      }
      @include bp(md) {
        letter-spacing: 0.06em;
      }
      @include bp(sm) {
        letter-spacing: 0.06em;
      }
    }
    @include bp(sm) {
      padding-top: 17px;
      .l-HeadingTitle {
        margin-bottom: 17px;
      }
    }
  }
  .sofina-lessonSummary__shop {
    background-color: #f5f5f5;
    padding: 0 30px;
    .g-Column__inner {
      background-color: $colorGray_8;
      padding: 27px 10px 19px;
    }
    @include bp(sm) {
      padding: 0 10px;
      .g-Column__inner {
        padding: 15px 10px 7px;
      }
    }
  }
  .sofina-lessonSummary__shop__title {
    .cmn-richtext {
      display: inline-block;
      @include fontSize(lv4);
      border-bottom: solid 3px #777777;
      margin-bottom: 14px;
      @include bp(sm) {
        @include fontSize(lv3);
        margin-bottom: 0;
      }
    }
  }
  .sofina-lessonSummary__shop__text {
    @include fontSize(lv6);
    line-height: 1.5;
    margin-bottom: 10px;
    @include bp(sm) {
      @include fontSize(lv7);
      line-height: 1.5;
    }
  }
  .sofina-lessonSummary__shop__note {
    @include fontSize(caption);
    line-height: 1.5;
  }
  
  .sofina-lessonSummary__after {
    background-color: #f5f5f5;
    padding-top: 46px;
    position: relative;
    &:after {
      position: absolute;
      display: inline-block;
      content: "▼";
      left: 50%;
      top: 10px;
      font-size: 16px;
      line-height: 1;
      margin-left: -.5em;
      color: #777;
    }
    @include bp(sm) {
      padding: 30px 10px 0;
      &:after {
        font-size: 12px;
      }
    }
  }
  
  .sofina-lessonSummary__after__title {
    font-size: $fontSize_lv4;
    line-height: 1.5;
    margin-bottom: 0;
    @include bp(sm) {
      font-size: $fontSize_sm_lv3;
    }
  }
  
  .sofina-lessonSummary__after__text {
    font-size: $fontSize_lv6;
    line-height: 1.5;
    @include bp(sm) {
      font-size: $fontSize_sm_lv7;
    }
  }
  
  //フロー
  .sofina-lessonSummary__flow {
    background-color: #f5f5f5;
    margin-top: 0;
    margin-bottom: 34px;
    .g-Column__inner {
      padding: 0 30px;
      @include bp(sm) {
        padding: 0 10px;
      }
    }
    .g-Column__cols {
      padding: 20px 0;
      &:nth-child(odd) {
        width: 44.75%;
        @include bp(sm) {
          width: 100%;
        }
      }
      &:nth-child(even) {
        width: 10.5%;
        @include bp(sm) {
          width: 100%;
          padding-bottom: 5px;
        }
      }
      @include bp(sm) {
        padding: 0 0 18px;
      }
    }
    .sofina-lessonSummary__flow__unit {
      .l-Text {
        margin-bottom: 0;
      }
      .sofina-flow__sublead_center{
        text-align: center;
      }
      &.is-side {
        padding: 30px;
        background-color: $colorGray_8;
        text-align: center;
        .sofina-flow__lead {
          display: inline-block;
          font-size: $fontSize_lv4;
          border-bottom: solid 3px #777777;
          text-align: center;
          @include bp(sm) {
            font-size: $fontSize_sm_lv3;
          }
        }
        @include bp(sm) {
          padding: 15px 10px 20px;
        }
      }
      &.is-center {
        padding: 34px 0;
        .sofina-flow__lead {
          text-align: center;
          font-size: $fontSize_lv6;
          @include bp(sm) {
            font-size: $fontSize_sm_lv7;
          }
        }
        @include bp(sm) {
          margin: -13px 0 0;
          padding: 0;
        }
      }
    }
    @include bp(sm) {
      margin-bottom: 20px;
    }
  }
  @include bp(md) {
    .g-Section__inner {
      padding-left: 20px;
      padding-right: 20px;
    }
  }
  @include bp(sm) {
    .g-Section__inner {
      padding-left: 0;
      padding-right: 0;
    }
  }
}
.sofina-lesson-section_summary {
  .g-Column__inner {
    padding-left: 50px;
    padding-right: 50px;
