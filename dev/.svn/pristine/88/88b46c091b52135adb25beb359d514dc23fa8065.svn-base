.sofina-lesson-section_flow__item {
  border-bottom: solid 1px $colorGray_5;
  padding-left: 110px;
  padding-top: 30px;
  padding-bottom: 30px;
  background-position: 36px 50%;
  &.sofina-lesson-section_flow__item01 {
    border-top: solid 1px $colorGray_5;
  }
  .g-ColumnUnit {
    display: table-cell;
    vertical-align: middle;
  }
  //タイトル
  .l-HeadingTitle {
    margin-bottom: 0;
  }
  .l-HeadingTitle__h4 {
    @include fontSize(lv5); //18px
    color: $colorGray_2;
    font-weight: normal;
  }
  //説明
  .l-Text {
    margin-top: 16px;
    @include fontSize(lv7); //14px
    color: $colorGray_2;
    font-weight: normal;
    line-height: 1.5;
    &.is-annotation {
      @include fontSize(caption); //12px
    }
  }
  //画像
  .l-Image__img {
    padding-left: 50px;
    padding-right: 30px;
  }
  //リスト
  .l-ListP {
    margin-top: 16px;
    margin-left: 10px;
    @include fontSize(lv7); //14px
    color: $colorGray_2;
    font-weight: normal;
    line-height: 1.5;
  }
  /*-----------------------*/
  // sm
  /*-----------------------*/
  @include bp(sm) {
    //font-family: $fontFamily_Gothic;
    padding-left: 30px;
    background-position: 0 18px;
    padding-top: 20px;
    padding-bottom: 20px;
    .g-ColumnUnit {
      display: block;
    }
    //タイトル
    .l-HeadingTitle {
      //font-family: $fontFamily_Gothic;
    }
    .l-HeadingTitle__h4 {
      @include fontSize(lv7); //14px
    }
    //説明
    .l-Text {
      margin-top: 5px;
      @include fontSize(caption); //12px
    }
    //画像
    .l-Image__img {
      padding-left: 0;
      padding-right: 30px;
      width: 90%;
      margin: 0 auto;
    }
    //リスト
    .l-List {
      margin-top: -4px;
      margin-left: 8px;
      @include fontSize(caption); //12px
