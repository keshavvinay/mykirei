.sofina-lesson-section__report {
  background-color: #f5f5f5;
  .l-Section__inner {
    padding: 6px 0;
  }
  .l-Column {
    width: 66%;
    margin: 0 auto;
  }
  @include bp(md) {
    .l-Column {
      width: 85%;
    }
  }
  @include bp(sm) {
    .l-Section__inner {
      padding: 0 10px;
    }
    .is-gutter--m {
      .l-Column__cols {
        padding: 7px 12px;
      }
    }
    .l-Column {
      width: 100%;
    }
  }
}
.sofina-lesson-section__report__tilelink__unit {
  border: none;
  @include box-shadow(none);
  padding: 4px 20px 0 30px;
  position: relative;
  .l-TileLinkHUnit__inner {
    position: static;
  }
  .l-Image {
    margin-bottom: 0;
  }
  .l-TileLinkHUnit__leadBlock {
    padding-bottom: 4px;
  }
  .l-TileLinkHUnit__leadBlock__title {
    margin-bottom: 16px;
  }
  .l-TileLinkHUnit__imageBlock {
    width: 32%;
  }
  .l-Text {
    margin-bottom: 0;
    @include fontSize(lv4);
    font-family: $fontFamily;
    @include bp(lg) {
      letter-spacing: .1em;
    }
    @include bp(md) {
      letter-spacing: .1em;
    }
    @include bp(sm) {
      letter-spacing: .1em;
    }
  }
  .cmn-icon--bullet {
    &:before {
      display: block;
      content: "\e006";
      font-size: 14px;
      color: $colorGray_1;
      margin-top: -.5em;
      margin-right: 20px;
    }
  }
  @include bp(sm) {
    padding: 15px 10px 0 10px;
    .l-TileLinkHUnit__leadBlock__title {
      width: 54.29%;
      margin-bottom: 12px;
    }
