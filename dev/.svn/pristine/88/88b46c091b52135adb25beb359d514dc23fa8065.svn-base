      font-size: 15px;
    }
    &.is-smallViewVertical.is-layoutR {
      .g-TileLinkHUnit__leadBlock {
        padding-bottom: 0;
      }
    }
    &.is-smallViewVertical {
      .g-TileLinkHUnit__inner .g-TileLinkHUnit__leadBlock {
        padding-right: 10px;
      }
    }
    .l-TileLinkHUnit__imageBlock {
      width: 60.71%;
      margin: 10px auto 0;
    }
    .cmn-icon--bullet {
      &:before {
        font-size: 10px;
        margin-right: 0;
      }
    }
  }
