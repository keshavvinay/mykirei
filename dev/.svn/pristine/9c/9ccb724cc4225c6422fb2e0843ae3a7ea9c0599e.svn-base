@charset "utf-8";

/*****************************
  principles
 *****************************/

/*
 design principles
 （サイト、ページ別に上書きを許可）
 */
$marginGutterColumn_lg_s:  16px;
$marginGutterColumn_lg_m:  24px;
$marginGutterColumn_lg_l:  32px;
$marginGutterColumn_lg_xl: 48px;

$marginGutterColumn_md_s:  16px;
$marginGutterColumn_md_m:  24px;
$marginGutterColumn_md_l:  32px;
$marginGutterColumn_md_xl: 48px;

$marginGutterColumn_sm_s:  16px;
$marginGutterColumn_sm_m:  24px;
$marginGutterColumn_sm_l:  32px;
$marginGutterColumn_sm_xl: 48px;

// box margin
$marginBox_lg_s:  16px;
$marginBox_lg_m:  24px;
$marginBox_lg_l:  32px;
$marginBox_lg_xl: 48px;

$marginBox_md_s:  16px;
$marginBox_md_m:  24px;
$marginBox_md_l:  32px;
$marginBox_md_xl: 48px;

$marginBox_sm_s:  16px;
$marginBox_sm_m:  24px;
$marginBox_sm_l:  32px;
$marginBox_sm_xl: 48px;

// section margin
$marginSectionLeftRight_lg: 40px;//
$marginSectionLeftRight_md: 32px;
$marginSectionLeftRight_sm: 24px;
$marginSectionTopBottom_lg: 40px;//
$marginSectionTopBottom_md: 32px;
$marginSectionTopBottom_sm: 24px;

// hr border-width:
$borderWidthHr_s: 1px;
$borderWidthHr_m: 2px;
$borderWidthHr_l: 4px;

// box border-width
$borderWidthBox_s: 1px;
$borderWidthBox_m: 2px;
$borderWidthBox_l: 4px;

// アイコンは"_icon.scss"に記載

// link-hover
$linkBlockHoverOpacity: .7;

// radius
$borderRadius_xs: 4px;
$borderRadius_s:  8px;
$borderRadius_m:  12px;
$borderRadius_l:  16px;
$borderRadius_xl: 20px;

// font-scale
$fontScale_xs:    0.5em;
$fontScale_s:     0.75em;
$fontScale_l:     1.25em;
$fontScale_xl:    1.5em;
$fontScale_xxl:   1.75em;
$fontScale_xxxl:  2em;
$fontScale_xxxxl: 2.5em;

// line-height
$lineHeight_l:      2;
$lineHeight_xl:     2.4;
$lineHeight_xxl:    2.8;
$lineHeight_xxxl:   3.2;
$lineHeight_xxxxl:  4;



// shadow (x,y,blur,spread,rgba)
$shadowA_setting: 2px 2px 0 0 rgba(0, 0, 0, .1);
$shadowB_setting: 2px 2px 2px 2px rgba(0, 0, 0, .1);


// Page Title下線
$PageTitle__bordered: false;//

// Heading Title H2下線
$HeadingTitle--h2__bordered: false;//

// Image/Movie&TextPack 画像とテキストの横並び時の間隔
$ImageTextPack__separator: 16px;
$ImageTextPack__separator--sm: 12px;
$MovieTextPack__separator: 16px;
$MovieTextPack__separator--sm: 12px;

// MapAccessPack 地図とテキストの横並び時の間隔
$MapAccessPack__separator: 36px;

// Tile Link Pack Unitの各種設定
$TileLinkPack__bordered: true;
$TileLinkPack__padding: 20px;
$TileLinkPack__separator: 16px;
$TileLinkPack__separator--sm: 12px;
