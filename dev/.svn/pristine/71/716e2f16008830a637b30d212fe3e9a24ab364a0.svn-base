@charset "utf-8";

/*awards_and_testimonials*/
.jf-awards_and_testimonials {
  font-size: 16px;
  .l-Section__inner {
    background: #b7b7b7;
    margin-bottom: 2.5rem;
    padding-bottom: 1.5625rem;
  }
  .l-HeadingTitle__h2 {
    font-size: 3.75rem!important;
    font-weight: 400;
    text-align: center;
    padding: 0.4em 0 0.4em 0;
    padding-top: 0;
    margin: 0;
    margin-top: -2.666%;
    position: relative;
    &:after {
      @include centered;
      position: absolute;
      top: 100%;
      left: 50%;
      width: 20px;
      height: 1px;
      background: #000000;
      content: "";
    }
  }

  .l-Text {
    margin-bottom: 0;
    font-size: 16px;
  }

  .l-TextLinkP {
    width: 18.406px;
    display: inline-block;
    background-size: contain;
    padding:0;
    margin-top: -0.2em;
    margin: 1em 0;
    .cmn-richtext {
      padding-left: 21px;
      font-size: 16px;
      span {
        font-family: "Georgia", serif;
        font-style: italic;
      }
    }
    .l-TextLinkP__list__item {
      line-height: 2em;
    }
  }
  .l-Column__inner {
    .l-HeadingTitle__titleBlock {
      display: block;
    }
  }
  .l-HeadingTitle__titleBlock__titleBox {
    display: block;
    position: relative;
    min-height: 1px;
    .l-Text {
      font-weight: 400;
      font-size: 1.125rem;
      display: inline-block;
      width: 100%;
    }
  }

  .l-Section__inner {
    .l-Column {
      &:last-child {
        .l-Column__cols {
          width: auto;
        }
      }
    }
  }

.l-HeadingTitle__titleBlock__titleBox__title {
  margin-bottom: 0;
} 
.l-HeadingTitle--h2 {
  .l-HeadingTitle__titleBlock__titleBox {
    width: 100%;
    margin: 0;
  }
}

