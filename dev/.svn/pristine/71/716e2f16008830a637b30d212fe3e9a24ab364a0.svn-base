}
}
.l-HeadingTitle__h3 {
  width: 75%;
  padding-left: 5%;
  .cmn-richtext {
    font-size: (30rem / 16);
    width: 68%;
    max-width: 68%;
    -ms-flex-preferred-size: 68%;
    flex-basis: 68%;
  }
}
.l-HeadingTitle__titleBlock__imageBox {
  display: block;
  width: 26%;
  max-width: 26%;
  background: $white;
  border-radius: 50%;
  position: relative;
  margin: 0 2.5%;
  padding: 13%;
  padding-right: 0!important;
  .l-Image {
    @include centered;
    padding-right: 0;  
    position: absolute!important;
    top: 50%;
    left: 50%;
    display: block;
    width: 80%;
    margin: 0 auto;
    img {
      max-width: 88px;
      margin: 0 auto
    }
  }
}
.l-HeadingTitle--h3 {
  .l-HeadingTitle__titleBlock {
    display: table;
    width: 100%;
    .l-HeadingTitle__titleBlock__imageBox {
      display: table-cell;
    }
    .l-HeadingTitle__titleBlock__titleBox {
      display: table-cell;
    }
  }
}

}
@include bp(md) {
  margin-right: auto;
  margin-left: auto;
  padding-left: 10px;
  padding-right: 10px;
  font-size: (60rem / 16);
  .l-Section__inner {
    max-width: 620px;
    padding: 0 10px 25px 10px;
    .l-HeadingTitle__h2 {
      font-size: 3rem;
      padding-bottom: 0;
    }
    .l-Column {
      &:last-child {
        .l-Column__cols {
          font-size: 18px;
          line-height: 1.4;
          letter-spacing: normal;
          margin: 17px 51px 17px 51px;
          padding-left: 10px;
          padding-right: 10px;
          &:first-child{
            margin-left: 12.5%;
            margin-bottom: 1em;
            margin-top: 1em;
            margin-right: 0;
          }
          .l-Text {
            span.AwardsAndTestimonials__quoteMarkers:nth-of-type(1) {
              position: relative;
              &:before {
                position: absolute;
                top: 0.25em;
                left: -0.4em;
                font-size: 7.8125rem;
                color: #000000;
                content: "“";
                line-height: 0;
                text-indent: 0;
              }
            }
            span.AwardsAndTestimonials__quoteMarkers:nth-of-type(2) {
              position: relative;
              display: inline;
              &:after {
                position: absolute;
                display: flex;
                top: -0.10em;
                left: 0;
                font-size: 7.8125rem;
                color: #000000;
                content: "“";
                line-height: 0;
                -webkit-transform: rotate(180deg);
                -ms-transform: rotate(180deg);
                transform: rotate(180deg);
                -ms-transform-origin: 0 0;
                -ms-transform: rotateZ(180deg);
              }

            }
          }
          .l-Text span {
            span:last-child {
              text-indent: 2em;
              font-size: 1rem;
              display: block;
              line-height: 1.250em;
            }
          }

        }
      }
    }
  }
  .l-HeadingTitle__titleBlock__imageBox {
    margin: 0 4.5%;
    width: 22%;
    .l-Image {
      position: relative;
      display: block;
      background: #ffffff;
      border-radius: 50%;
      position: relative;
      padding: 38% 0;
      img{
        width: 85%!important;
        margin: 0 auto;
      }
    }
  }
  .l-HeadingTitle--h3 {
    .l-HeadingTitle__titleBlock {

      .l-HeadingTitle__titleBlock__titleBox {
        display: table-cell;
      }
    }
  }
  .l-HeadingTitle__titleBlock__titleBox {
    width: 75%;
    margin: 0 10px;
    padding-right:0;
  }
  .l-HeadingTitle--h2 {
    padding-top: 36px;
  }
  .l-HeadingTitle__h3 {
    margin: 0 2.5%;
  }

}
@include bp(sm) {
  font-size: (60rem / 16);
  .l-Section__inner {
    padding: 0 10px 25px 10px;
    .l-HeadingTitle__h2 {
      font-size: 48px!important;
    }
    .l-Column {
      &:last-child {
        .l-Column__cols {
          font-size: 18px;
          line-height: 1.4;
          letter-spacing: normal;
          margin: 37.5px 0 0;
          padding-left: 10px;
          padding-right: 10px;
          &:first-child {
            margin-top: 1em;
            margin-right: 0;
          }
        .l-Text {
          span.AwardsAndTestimonials__quoteMarkers:nth-of-type(1) {
            display: none;
            }
            span.AwardsAndTestimonials__quoteMarkers:nth-of-type(2) {
            display: none;

            }
          }
          .l-Text span {  

            span:first-child {
              line-height: 24px;
              position: relative;

              &:before {
                position: absolute;
                left: -0.15em;
                top: 0.25em;
                font-size: 7.8125rem;
                color: #000000;
                content: "“";
                line-height: 0;
                text-indent: 0;
              }
              &:after {
                position: absolute;
                bottom:  33px;
                font-size: 7.8125rem;
                color: #000000;
                content: "“";
                line-height: 0;
                -webkit-transform: rotate(180deg);
                -ms-transform: rotate(180deg);
                transform: rotate(180deg);
                -ms-transform-origin: 0 0;
                -ms-transform: rotateZ(180deg);
              }
            }
            span:last-child {
              display: block;
              text-indent: 2em;
              font-size: 1rem;
              line-height: 1.250em;
            }
          }

        }
      }
    }
  }
  .l-HeadingTitle__titleBlock__imageBox {
    width: 28%;
    .l-Image{
      display: block;
      width: 86px;
      height: 86px;
      background: #ffffff;
      border-radius: 43px;
      position: relative;
      margin: 0;
      margin-left: 2.5%;
      img {
        width: 85%!important;
        margin: 0 auto;
      }
    }
  }
  .l-HeadingTitle--h3 {
    .l-HeadingTitle__titleBlock {
      width: 100%;
      margin-left: 2.5%;
      .l-HeadingTitle__titleBlock__imageBox {
        .l-Image__img {
          top: 0px;
          display: flex;
        }
      }
      .l-HeadingTitle__titleBlock__titleBox {
        display: table-cell;
      }
    }
  }
  .l-HeadingTitle__titleBlock__titleBox {
    width: 100%;
  }
  .l-HeadingTitle__h3 {
    font-size: 24px!important;
    margin: 0 2.5%;
    width: 100%;
  }
  .l-HeadingTitle--h2 {
    padding-top: 36px;
  }

}
.l-HeadingTitle {
  margin-bottom: 0;
}
}