@charset "utf-8";


/* TileLinkTextP ================================================== */
.g-TileLinkTextP {
  box-sizing: border-box;
  //font-size: 0;
  &.is-background {
    padding: $cmn_paddingInner;
    
    @include bp(lg) {
      padding-top: $cmn_paddingInner - $cmn_marginItemGutter_lg/2;
      padding-bottom: $cmn_paddingInner - $cmn_marginItemGutter_lg/2;
    }
    @include bp(md) {
      padding-top: $cmn_paddingInner - $cmn_marginItemGutter_md/2;
      padding-bottom: $cmn_paddingInner - $cmn_marginItemGutter_md/2;
    }
    @include bp(sm) {
      padding-top: $cmn_paddingInner - $cmn_marginItemGutter_sm/2;
      padding-bottom: $cmn_paddingInner - $cmn_marginItemGutter_sm/2;
    }
  }
}

.g-TileLinkTextP__list {
  @include gutterItemWrapper();
  padding: 0;
  list-style-type: none;
  @include pie-clearfix;
}

.g-TileLinkTextP__list__tile {
  float: left;
  //display: inline-block;
  @include gutterItemInner();
  vertical-align: top;
  @include fontSize(body);
}
@include bp(sm) {
  .g-TileLinkTextP__list__tile-sm-1 {
    width: $cmn_colsWidth_1;
  }
  .g-TileLinkTextP__list__tile-sm-2 {
    width: $cmn_colsWidth_2;
  }
  .g-TileLinkTextP__list__tile-sm-3 {
    width: $cmn_colsWidth_3;
  }
  .g-TileLinkTextP__list__tile-sm-4 {
    width: $cmn_colsWidth_4;
  }
  .g-TileLinkTextP__list__tile-sm-5 {
    width: $cmn_colsWidth_5;
  }
  .g-TileLinkTextP__list__tile-sm-6 {
    width: $cmn_colsWidth_6;
  }
}
@include bp(md) {
  .g-TileLinkTextP__list__tile-md-1 {
    width: $cmn_colsWidth_1;
  }
  .g-TileLinkTextP__list__tile-md-2 {
    width: $cmn_colsWidth_2;
  }
  .g-TileLinkTextP__list__tile-md-3 {
    width: $cmn_colsWidth_3;
  }
  .g-TileLinkTextP__list__tile-md-4 {
    width: $cmn_colsWidth_4;
  }
  .g-TileLinkTextP__list__tile-md-5 {
    width: $cmn_colsWidth_5;
  }
  .g-TileLinkTextP__list__tile-md-6 {
    width: $cmn_colsWidth_6;
  }
}
@include bp(lg) {
  .g-TileLinkTextP__list__tile-lg-1 {
    width: $cmn_colsWidth_1;
  }
  .g-TileLinkTextP__list__tile-lg-2 {
    width: $cmn_colsWidth_2;
  }
  .g-TileLinkTextP__list__tile-lg-3 {
    width: $cmn_colsWidth_3;
  }
  .g-TileLinkTextP__list__tile-lg-4 {
    width: $cmn_colsWidth_4;
  }
  .g-TileLinkTextP__list__tile-lg-5 {
    width: $cmn_colsWidth_5;
  }
  .g-TileLinkTextP__list__tile-lg-6 {
    width: $cmn_colsWidth_6;
  }
}

/* TileLinkTextUnit ================================================== */
.g-TileLinkTextUnit {
  display: block;
  position: relative;
  width: 100%;
  padding: $cmn_paddingInner;
  box-sizing: border-box;
  background-color: $cmn_colorGray_0;
  @include areaLink();
  border: 2px solid $cmn_colorGray_6;
  text-decoration: none;
  color: $colorFontBody;
  &.is-background {
    
  }
}

.g-TileLinkTextUnit__leadBlock {
  padding-right: 24px;
  @include bp(sm) {
    padding-right: 20px;
  }
}

.g-TileLinkTextUnit__leadBlock__title {
  display: inline-block;
  font-weight: bold;
}

.g-TileLinkTextUnit__leadBlock__lead {
}

.g-TileLinkTextUnit__icon {
  position: absolute;
  top: 50%;
  right: $cmn_paddingInner;
  margin-top: -.7em;
}
