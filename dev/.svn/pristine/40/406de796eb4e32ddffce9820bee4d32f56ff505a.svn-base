@charset "utf-8";


/* InstagramPost ================================================== */
.l-InstagramPost--v3 {
  &.is-colorset--1 {
    color: $instagramPost__text--01;
    .cmn-icon {
      color: $instagramPost__icon--01;
    }
    .l-InstagramPostUnit--v3 {
      border-color: $instagramPost__border--01;
    }
    .l-InstagramPost--v3__contentsBlock__links__item__link,
    .l-InstagramPost--v3__contentsBlock__visit__link,
    .l-InstagramPost--v3__contentsBlock__postText a {
      color: $instagramPost__link--01;
      &:link {
        color: $instagramPost__link--01;
      }
      &:visited {
        color: $instagramPost__link--01--visited;
      }
      &:hover,
      &:focus,
      &:active {
        color: $instagramPost__link--01--hover;
      }
    }

    .l-InstagramPost--v3__nextArrow,
    .l-InstagramPost--v3__prevArrow {
      @include button();
      background-color: $instagramPost__carousel__icon__bg--01;
      &:before {
        color: $instagramPost__carousel__icon--01;
      }
    }
    .l-InstagramPost--v3__nav__dot {
      @include button();
      &:before {
        color: $instagramPost__indicator__icon--01;
      }
    }
  }
  &.is-colorset--2 {
    color: $instagramPost__text--02;
    .cmn-icon {
      color: $instagramPost__icon--02;
    }
    .l-InstagramPostUnit--v3 {
      border-color: $instagramPost__border--02;
    }
    .l-InstagramPost--v3__contentsBlock__links__item__link,
    .l-InstagramPost--v3__contentsBlock__visit__link,
    .l-InstagramPost--v3__contentsBlock__postText a {
      color: $instagramPost__link--02;
      &:link {
        color: $instagramPost__link--02;
      }
      &:visited {
        color: $instagramPost__link--02--visited;
      }
      &:hover,
      &:focus,
      &:active {
        color: $instagramPost__link--02--hover;
      }
    }

    .l-InstagramPost--v3__nextArrow,
    .l-InstagramPost--v3__prevArrow {
      @include button();
      background-color: $instagramPost__carousel__icon__bg--02;
      &:before {
        color: $instagramPost__carousel__icon--02;
      }
    }
    .l-InstagramPost--v3__nav__dot {
      @include button();
      &:before {
        color: $instagramPost__indicator__icon--02;
      }
    }
  }
}
.l-InstagramPost--v3__contentsBlock {
}
.l-InstagramPost--v3__contentsBlock__image {
}
.l-InstagramPost--v3__contentsBlock__date {
}
.l-InstagramPost--v3__contentsBlock__tweet {
}
.l-InstagramPost--v3__contentsBlock__links {
}
.l-InstagramPost--v3__contentsBlock__links__item {
}
.l-InstagramPost--v3__nextArrow {
  @include border-radius($borderRadius_xs);
}
.l-InstagramPost--v3__prevArrow {
  @include border-radius($borderRadius_xs);
}
