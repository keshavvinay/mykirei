@charset "utf-8";

/*  faq_back_to_search_results */

.jf-faq_back_to_search_results {
  margin-bottom: 0;
  @include bp(lg) {
    margin-left: 72px;
  }
  @include bp(md) {
    width: 620px;
    margin-left: auto;
    margin-right: auto;
  }
  @include bp(sm) {
    margin-left: 10px;
    margin-right: 10px;
  }
  .l-TextLinkUnit__link {
    @include georgiabolditalic;
    position: relative;
    padding-left: 30px;
    .cmn-richtext {
      position: relative;
      @include transition(all 0.2s cubic-bezier(0.645, 0.045, 0.355, 1));
      &:before {
        content: "";
        position: absolute;
        bottom: -1px;
        left: 0;
        width: 100%;
        height: 1px;
        background-color: $black;
        @include transition(all 0.1s cubic-bezier(0.645, 0.045, 0.355, 1));
        @include scaleX(0);
      }
      &:after {
        position: absolute;
        left: -30px;
        top: 50%;
        @include transform(translateY(-50%) rotateZ(225deg));
        color: $pink;
      }
    }
    @include bp(lg) {
      .cmn-richtext {
        &:hover {
          color: $txtgreymd;
        }
        &:hover:before {
          background: $txtgreymd;
          transform: scaleX(1)
        }
        &:active {
          color: $moreLinkActive;
          &:before {
            transform: scaleX(1);
          }
        }
      }
    }
    
  }
}
