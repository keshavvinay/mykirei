@charset "utf-8";

@import "compass";
@import "libs/config";
@import "libs/mixin";

/* Setting ============================================================ */
html {
  height: 100%;
}

body {
  position: relative;
  -webkit-text-size-adjust: 100%;
  height: 100%;
  background: $body__bg;
  font-family: $body__font;
  font-weight: normal;
}

a:link, a:visited {
  color: $color__primary--normal;
  text-decoration: underline;
  @include transition-duration(.2s);
}
a:hover, a:active {
  text-decoration: underline;
  color: #199EF7;
}

.hover {
  @include opacity(.7);
}

.note {
  color: #FF0000;
}

.hide {
  display: none;
}
