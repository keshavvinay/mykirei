@charset "utf-8";

/*  change_country */

.jf-change_country {
  position: relative;
  background-color: #606060;
  
}
.jf-change_country__bg {
  position: absolute;
  z-index: 1;
  left: 0;
  top: 0;
  .is-authorring & {
    position: relative;
  }
}
.jf-change_country__header {
  position: relative;
  z-index: 2;
}

.jf-change_country__title {
  padding-top: 250px;
  margin-bottom: 84px !important;
  .l-Text {
    font-size: .9rem;
    line-height: normal;
    letter-spacing: normal;
    margin-bottom: 0;
  }
  .l-HeadingTitle__h2 {
    font-size: 3rem;
    line-height: normal;
    letter-spacing: normal;
  }
  @include bp(md) {
    margin-bottom: 104px !important;
  }
  @include bp(sm) {
    margin-bottom: 30px !important;
    .l-HeadingTitle__h2 {
      font-size: 38px;
    }
  }
}

.jf-change_country__list {
  position: relative;
  z-index: 2;
  padding-top: 50px;
  padding-bottom: 45px;
  @include bp(sm) {
    padding-bottom: 0;
  }
  .l-GroupBox {
    margin-bottom: 24px;
    @include display-flex;
    display: -webkit-box;
    @include align-items(baseline);
    -webkit-box-align: baseline;
    @include bp(sm) {
      @include justify-content(center);
      -webkit-box-pack: center;
    }
    em {
      @include georgiabolditalic;
    }
  }
  .l-Text {
    margin-bottom: 0;
    font-size: 1rem;
    line-height: normal;
    letter-spacing: normal;
  }
  .l-TextLinkP {
    margin-bottom: 0;
    .l-TextLinkP__list {
      //@include display-flex;
    }
    .l-TextLinkUnit__link {
      display: inline;
      position: relative;
      font-size: 1rem;
      line-height: normal;
      letter-spacing: normal;
      text-decoration: none;
      &:after {
        content: "";
        position: absolute;
        bottom: -1px;
        left: 0;
        width: 100%;
        height: 1px;
        background-color: $black;
        transition: all .1s cubic-bezier(.645, .045, .355, 1);
        @include scaleX(0);
      }
      .cmn-richtext {
        display: inline;
      }
      @include bp(md) {
        display: inline;
        &:hover {
          .opt-fontcolor--01 {
            color: $moreLinkHoverWhite;
          }
        }
        &:hover:after {
          background: $moreLinkHoverWhite;
          transform: scaleX(1);
        }
        &:active {
          color: $moreLinkActive;
          &:after {
            transform: scaleX(1);
          }
        }
      }
      @include bp(lg) {
        display: inline;
        &:hover {
          .opt-fontcolor--01 {
            color: $moreLinkHoverWhite;
          }
        }
        &:hover:after {
          background: $moreLinkHoverWhite;
          @include scaleX(1);
        }
        &:active {
          color: $moreLinkActive;
          &:after {
            @include scaleX(1);
          }
        }
      }
    }
    .l-TextLinkUnit {
      margin: 0;
      @include bp(sm) {
        text-align: center;
      }
    }
  }
}
.jf-change_country__list__lang {
  .l-TextLinkUnit__link {
    margin-left: .2em;
  }
}
.jf-change_country__list__title {
  margin-bottom: 24px !important;
  .l-HeadingTitle__h2 {
    font-size: 16px;
    line-height: normal;
    letter-spacing: normal;
  }
  @include bp(sm) {
    text-align: center;
  }
}