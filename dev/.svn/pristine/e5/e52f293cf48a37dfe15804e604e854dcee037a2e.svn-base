.contact-form-section {
    input {
        padding-left: 10px;
    }
    label {
        font-size: 20px;
        font-family: "Gotham Book", sans-serif;
    }
    .g-Column__cols.l-Column__cols.g-Column__cols-lg-2.g-Column__cols-md-1.g-Column__cols-sm-1:nth-child(1){
        width: 70%;
        @media #{$tablet-md} {
            width: 100%;
        }
        form {
            width:792px;

            @media #{$tablet-only} {
                width:959px;
            }

            @media #{$tablet-md} {
                width: 100%;
            }
        }
        .form {
            display: inline-flex;
            flex-direction: column;
            flex-flow: wrap;

            @media #{$phone-sm} {
                display: initial;
            }
       
            .form_row {
                max-width: 384px;
                margin: 22px 6px;
                width: 100%;
                height: 71px;

                @media #{$tablet-only} {
                    max-width: 469px;
                    margin: 22px 5px;
                    height: 64px;
                }

                @media #{$tablet-md} {
                    max-width: 595px;
                    margin: 22px 0;
                    height: 64px;
                    width: 100%;
                }

                .form_leftcol {
                    height: 20px;
                    line-height: 38px;
                    padding-bottom: 20px;
                }

                .form_leftcolmark {
                    display: none;
                }
                input {
                    width: 372px;
                    height: 40px;
                    border: 1px solid $text-color-blue;
                    border-radius: 24px;

                    @media #{$tablet-only} {
                        width: 457px;
                        height: 29px;
                    }

                    @media #{$tablet-md} {
                        max-width: 583px;
                        height: 29px;
                        width: 100%;
                        margin: 0 auto;
                    }

                }

                input.error {
                    border: 1px solid $text-color-err;
                }
                .error.help-block {
                    display: none !important;
                }

                input:focus {
                    border: 1px dashed $text-color-blue;
                    outline: none;
                }

              
            }

            .g-GroupBox.l-GroupBox{
                max-width: 384px;
                min-height: 71px;
                margin: 25px 12px;
                margin-left: 0;

                @media #{$tablet-only} {
                    max-width: 469px;
                    min-height: 64px;
                    margin: 35px 10px 0 0;
                }

                @media #{$tablet-md} {
                    max-width: 595px;
                    min-height: 64px;
                    width:100%;
                }

                .form_row {
                    margin: 0;                   
                }  
                .cmn-richtext {
                    font-size: 20px;
                    font-family: "Gotham Book", sans-serif;
                }             
            }

                            
            .state-list-group, .gender-wrapper {

                .g-ListP.l-ListP.is-none {
                    display: none;
                }
                    
                .g-ListP.l-ListP {
                    
                    background: $text-color-white;
                    border: 1px solid $border-color;
                    box-shadow: 1px 2px $border-color;
                    z-index: 99999999;
                    min-height: 175px;
                    overflow: auto;
                }
            }

            .gender-wrapper {
                .g-ListP.l-ListP {
                
                    min-height:51px;
                    height: auto;
                }
            }

            .date-group-box {
                display: unset;
                width: 100%;

                .g-Text.l-Text {
                    width: 100%;
                    display: block;
                }
                .month-wrapper, .date-wrapper {
                    float: left;
                    margin-right: 10px;
                }

                .month-wrapper {
                    .month-wrap.g-ListP.l-ListP.is-dot {
                        display: none;
                        
                        ul {
                            list-style: none;
                            
                            background: $text-color-white;
                        border: 1px solid $border-color;
                        box-shadow: 1px 2px $border-color;
                        z-index: 99999999;
                        min-height: 100px;
                        overflow: auto; 
                        }
                    }
                }
                .date-wrap.g-ListP.l-ListP.is-none {
                    display: none;
                    ul {
                        list-style: none;
                            
                            background: $text-color-white;
                        border: 1px solid $border-color;
                        box-shadow: 1px 2px $border-color;
                        z-index: 99999999;
                        min-height: 100px;
                        overflow: auto; 
                    }
                }

                .year-wrap.g-ListP.l-ListP.is-none {
                    display: none;
                    ul {
                        list-style: none;
                            
                            background: $text-color-white;
                        border: 1px solid $border-color;
                        box-shadow: 1px 2px $border-color;
                        z-index: 99999999;
                        min-height: 100px;
                        overflow: auto; 
                    }
                }
                input {
                    width: 103px;
                    height: 40px;

                    @media #{$tablet-md} {
                        width: 166px;
                        height: 29px;
                        padding-left: 10px;
                    }
                }
            }

            .product-code-popup {
                width: 380px;


                @media #{$tablet-only} {
                    width:469px;
                }

                @media #{$tablet-md} {
                    max-width: 595px;
                    width: 100%;
                    margin: 0;
                }
                .form_row {
                    width: 338px;
                    float: left;
                    margin-right: 18px !important;
                    @media #{$tablet-only} {
                        width:469px;
                    } 
                    @media #{$tablet-md} {
                        max-width: 595px;
                        margin-right: 0  !important;
                        width: 100%;
                    }
                }
                .g-Image.l-Image {
                    p {
                        padding-top: 20px;
                    }

                    span.icon-question-circle {
                        color: $text-color-blue;

                        @media #{$tablet-only} {
                            padding-top: 0;
                            float: right;
                            margin-top: -0.5em;
                        }

                        @media #{$tablet-md} {
                            float: right;
                        }
                    }

                    .icon-question-circle:before {
                        @media #{$tablet-md} {
                            top: -1em;
                            position: relative;
                            left: 1em;
                        }
                       
                    }
                }
                .g-Text.l-Text {
                    padding-top: 25px;
                }
                input {
                    width: 326px;
                    @media #{$tablet-only} {
                        width:411px;
                    }
                    @media #{$tablet-md} {
                        max-width: 536px;
                        width: 100%;
                        margin: 0;
                    }
                }
            }

            .privacy-text {
                width: 381px;
                margin-left: 15px;

                

                @media #{$tablet-only} {
                    margin-top: 20px;
                }

                @media #{$tablet-md} {
                    max-width: 595px;
                    width:100%;
                    display: block;
                    position: relative;
                    padding-top: 8em;
                }
            }
            textarea#contact_us_comment {
                width: 380px;
                height: 160px;
                border: 1px solid $text-color-blue;
                border-radius: 12px;

                @media #{$tablet-md} {
                    max-width: 595px;
                    width: 100%;
                    
                }
            }
            .agree-box {
                display: flex;
                height:20px;
                margin: 11px 0 !important;

                .form_row:nth-child(1) {
                    display: none;
                }

            }
            input#contact_us_agree-0 {
                float: left;
                text-align: left;
                margin: 0;
                width: 16px;
                height: 16px;
                line-height: 30px;
                border: 1px solid $text-color-blue !important;
                background-color: $text-color-blue !important;
                margin: 5px 0;
            }

            .btn-wrapper {
                margin-left: 20px;
                margin-top: -3.5em;

/*                 @media #{$tablet-only} {
                    margin-left: 7em;
                } */

                @media #{$phone-sm} {
                    margin-left: 14px;
                    margin-top: -3em;
                }
                .form_leftcol {
                    display: none;
                }
                .form_rightcol {
                    @media #{$phone-sm} {
                        display: flex;
                    }
                }
                input {
                    width: 180px;

                    @media #{$tablet-only} {
                        width: 165px;
                        height: 33px;
                    }

                    @media #{$phone-sm} {
                        width: 140px;
                        height: 33px;
                        margin: 0;
                    }
                }
                .form_button_submit {
                    background: $text-color-blue;
                    color: $text-color-white;
                    font-size: 16px;
                }
                .form_button_reset {
                    background: $text-color-white;
                    color: $text-color-blue;
                }
            }
        }
    }
    .g-Column__cols.l-Column__cols.g-Column__cols-lg-2.g-Column__cols-md-1.g-Column__cols-sm-1:nth-child(2){
        width: 30%;
        padding: 0;
        @media #{$desktop-md} {
            width: 100%;
        }
        img {
            margin: 0 auto;
        }
        .g-HeadingTitle.l-HeadingTitle {
            @media #{$desktop-md} {
                text-align:left;
            }
            @media #{$phone-sm} {
               text-align: center;
            }
        }
        .g-Text.l-Text {
            width: 100%;
            height: 102px;
            line-height: 20px;

            @media #{$desktop-md} {
                padding-top: 20px;
                text-align: left;
            }
            @media #{$phone-only} {
                text-align: center;
            }
        }
      /*   .g-ColumnUnit.l-ColumnUnit.float-right {
            @media #{$tablet-only} {
                display: flex;
                justify-content: space-between;
            }

            @media #{$tablet-md} {
                display: inline-grid;
                float: none !important;
                justify-content: unset;
            }
        } */
        .g-GroupBox.l-GroupBox.curel-contact-groupBox.is-paddingReset {

            @media #{$desktop-md} {
                display: table;
            }

            @media #{$phone-sm} {
                padding: 10px 0;
                margin: 10px 0;
                display: block;
            }

            >.g-Image.l-Image.s7responsiveContainer.is-paddingReset {
                @media #{$desktop-md} {
                    float: left;
                    width: 20%;
                }
                @media #{$tablet-md} {
                    width: 30%;
                }
                @media #{$phone-only} {
                    width: 50%;
                }
                @media #{$phone-sm} {
                    width: 100%;
                }
            }
            >.g-HeadingTitle.l-HeadingTitle.opt-al_c.g-HeadingTitle--h3.l-HeadingTitle--h3.is-subTitleBottom {
                @media #{$desktop-md} {
                    float: left;
                    width: 80%;
                }
                @media #{$tablet-md} {
                    width: 70%;
                }
                @media #{$phone-only} {
                    width: 50%;
                }
                @media #{$phone-sm} {
                    width: 100%;
                }
            }
        }
    }
    .hidden-txt {
        visibility: hidden;
        width: 380px;
    }
    .form_leftcolmark {
        display: none;
    }

}