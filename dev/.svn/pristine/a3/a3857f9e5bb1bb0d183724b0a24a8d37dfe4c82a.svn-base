@charset "utf-8";

/* Newsletter_signup */
.jf_NewsLetter_Section_Wrapper {
  background-position:0 0;
	.jf_NewsLetter_Column_Separator {
		box-shadow: 0px 7px 15px -3px rgba(0, 0, 0, 0.65);
		margin-top: 7.5%;
		margin-left: 13.5%;
		width: 30em;
		 @include bp(sm) {
		 margin-left: auto;
		 }
		 @include bp(md) {
		 margin-left: auto;
		 width: 30em;
		 }
		.jf_NewsLetter_Column_Unit {
			input {
				width: 100%;
				height: 45px;
				line-height: 2.5em;
				padding-left: .5em;
				margin-bottom: 1.5em;
				border: 1px solid #818181;
				border-radius: 0;
				box-shadow: inset 0px 10px 0px 0px rgba(70, 70, 70, 0);
				transition: box-shadow 0.2s cubic-bezier(0.645, 0.045, 0.355, 1);
				-webkit-appearance: none;
				-webkit-border-radius: 0px;
			}
			.l-PageTitle__h1 {
				font-family: "Bodoni 72 Book", sans-serif;
				font-weight: 400;
				font-size: 3rem;
				letter-spacing:normal;
				 			 
			}
			.l-PageTitle {
				.cmn-richtext span:after { 
					content: ""; 
					display: block; 
					width: 1rem; 
					height: 1px; 
					background: #000000; 
					margin: 0.5875rem auto;
				}
			}
			.newsletter_require-notification{
				font-size: .6rem;
				font-weight: bold;
				display: block;
				text-align: right;
				margin-bottom: .5em;
			}	
			.dob_label {
				display: block;
				margin-top: -1em;
			}
			.newsletter_date_input {
				display:flex
            }
			.newsletter_date_day {
				font-family: fontplus-unused;
				width: 69% !IMPORTANT;
				margin-left: 15%;
			}
			.newsletter_Submit_Button {
				-webkit-appearance: button;
				cursor: pointer;
				background: transparent;
				text-align: center;
				font-family: "FuturaLTW05-Bold", sans-serif;
				background: #ffffff;
				text-transform: uppercase;
				border: 1px solid #000000;
				letter-spacing: .125rem;
				width: auto !important;
				margin: 0 auto;
				display: block;
			}
			input .newsletter_date_month{
				flex: 2 0 0%;
				margin-right: 1em;
				min-height: 0;
				min-width: 0;
			}
		}
    }
}