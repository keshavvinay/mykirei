@charset "utf-8";


/* TileLinkVP ================================================== */
.g-TileLinkVP {
  box-sizing: border-box;
  &.is-background {
    padding: $cmn_paddingInner;
    @include gutterItemBgAjust();
    &.is-gutter--none {
      @include gutterItemBgAjust('none');
    }
  }
  &.is-gutter--none {
    .g-TileLinkVP__list {
      @include gutterItemWrapper(true);
    }
    .g-TileLinkVP__list__tile {
      @include gutterItemInner(true);
    }
  }
  &.is-paddingNone {
    .g-TileLinkVUnit {
      padding: 0;
    }
  }
  &.is-borderNone {
    .g-TileLinkVUnit {
      border: none;
    }
  }
}

.g-TileLinkVP__list {
  @include gutterItemWrapper();
  padding: 0;
  list-style-type: none;
  @include pie-clearfix;
}

.g-TileLinkVP__list__tile {
  float: left;
  @include gutterItemInner();
  vertical-align: top;
}
@include bp(sm) {
  .g-TileLinkVP__list__tile-sm-1 {
    width: $cmn_colsWidth_1;
  }
  .g-TileLinkVP__list__tile-sm-2 {
    width: $cmn_colsWidth_2;
  }
  .g-TileLinkVP__list__tile-sm-3 {
    width: $cmn_colsWidth_3;
  }
  .g-TileLinkVP__list__tile-sm-4 {
    width: $cmn_colsWidth_4;
  }
  .g-TileLinkVP__list__tile-sm-5 {
    width: $cmn_colsWidth_5;
  }
  .g-TileLinkVP__list__tile-sm-6 {
    width: $cmn_colsWidth_6;
  }
}
@include bp(md) {
  .g-TileLinkVP__list__tile-md-1 {
    width: $cmn_colsWidth_1;
  }
  .g-TileLinkVP__list__tile-md-2 {
    width: $cmn_colsWidth_2;
  }
  .g-TileLinkVP__list__tile-md-3 {
    width: $cmn_colsWidth_3;
  }
  .g-TileLinkVP__list__tile-md-4 {
    width: $cmn_colsWidth_4;
  }
  .g-TileLinkVP__list__tile-md-5 {
    width: $cmn_colsWidth_5;
  }
  .g-TileLinkVP__list__tile-md-6 {
    width: $cmn_colsWidth_6;
  }
}
@include bp(lg) {
  .g-TileLinkVP__list__tile-lg-1 {
    width: $cmn_colsWidth_1;
  }
  .g-TileLinkVP__list__tile-lg-2 {
    width: $cmn_colsWidth_2;
  }
  .g-TileLinkVP__list__tile-lg-3 {
    width: $cmn_colsWidth_3;
  }
  .g-TileLinkVP__list__tile-lg-4 {
    width: $cmn_colsWidth_4;
  }
  .g-TileLinkVP__list__tile-lg-5 {
    width: $cmn_colsWidth_5;
  }
  .g-TileLinkVP__list__tile-lg-6 {
    width: $cmn_colsWidth_6;
  }
}

/* TileLinkVUnit ================================================== */
.g-TileLinkVUnit {
  display: block;
  box-sizing: border-box;
  text-decoration: none;
  padding: $cmn_paddingInner;
  border: 2px solid;
  @include bp(sm) {
    &.is-smallViewHorizontal > .g-TileLinkVUnit__inner {
      display: table;
      width: 100%;
      position: relative;
    }
  }
  &.is-background {

  }
}

.g-TileLinkVUnit__imageBlock {
  margin-bottom: 20px;
  .is-layoutB & {
    margin-bottom: 0;
  }
  @include bp(sm) {
    margin-bottom: 16px;
    .is-smallViewHorizontal & {
      display: table-cell;
      vertical-align: top;
      margin-bottom: 0;
      padding-right: 20px;
    }
    .is-smallViewHorizontal.is-noicon & {
      padding-right: 0;
    }
    .is-smallViewHorizontal.is-layoutT & {
      padding-right: $cmn_TileLinkPack__separator--sm;
    }
  }

  @include bp(sm) {
    .opt-sm-al_l & {
      margin-right:  auto;
    }
    .opt-sm-al_r & {
      margin-left:  auto;
    }
    .opt-sm-al_c & {
      margin-left:  auto;
      margin-right:  auto;
    }
  }

  @include bp(md) {
    .opt-md-al_l & {
      margin-right:  auto;
    }
    .opt-md-al_r & {
      margin-left:  auto;
    }
    .opt-md-al_c & {
      margin-left:  auto;
      margin-right:  auto;
    }
  }

  @include bp(lg) {
    .opt-lg-al_l & {
      margin-right:  auto;
    }
    .opt-lg-al_r & {
      margin-left:  auto;
    }
    .opt-lg-al_c & {
      margin-left:  auto;
      margin-right:  auto;
    }
  }
}

.g-TileLinkVUnit__leadBlock {
  position: relative;
  padding-right: 24px;
  .is-noicon & {
    padding-right: 0;
    @include bp(sm) {
      padding-right: 0;
    }
  }
  .is-layoutB & {
    margin-bottom: 12px;
    @include bp(sm) {
      margin-bottom: 8px;
    }
  }
  @include bp(sm) {
    padding-right: 20px;
    .is-smallViewHorizontal & {
      display: table-cell;
      vertical-align: middle;
      position: static;
    }
    .is-smallViewHorizontal.is-noicon & {
      padding-right: 0;
    }
    .is-smallViewHorizontal.is-layoutB & {
      padding-right: $cmn_TileLinkPack__separator--sm;
    }
  }
}

.g-TileLinkVUnit__leadBlock__title {
  display: inline-block;
  width: 100%;
  font-weight: bold;
}

.g-TileLinkVUnit__leadBlock__lead {
  display: inline-block;
  width: 100%;
}

.g-TileLinkVUnit__icon {
  position: absolute;
  top: 50%;
  right: 0;
  margin-top: -.7em;
}

.g-TileLinkVUnit__extraStructural {
}
