@charset "utf-8";

/*  question_and_answer */

.jf-question_and_answer {
  @include bp(lg) {
    margin-left: 72px;
  }
  @include bp(md) {
    width: 620px;
    margin-left: auto;
    margin-right: auto;
  }
  @include bp(sm) {
    margin-left: 10px;
    margin-right: 10px;
  }
  
  height: auto !important;
  .l-HeadingTitle {
    margin-bottom: 0 !important;
  }
  .l-HeadingTitle__titleBlock__titleBox__title {
    margin-bottom: 0;
  }
  .l-HeadingTitle__h2 {
    font-size: 1.5rem;
    margin: 2em 0 0 0;
    line-height: 1.25;
  }
  .l-Text {
    margin-bottom: 0;
    position: relative;
    margin: 1.5em 0 0 0;
    padding-bottom: 2em;
    line-height: 1.5;
    &:after {
      content: "";
      display: block;
      width: 100%;
      height: 1px;
      border-bottom: solid 1px $txtgreylight;
      margin-top: 30px;
    }
  }
}
