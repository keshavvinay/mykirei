// Skin Plan
.skin-type-container {
    background-attachment: fixed;
    background-position: 50%;
    background-size: 800px auto;
    position: relative;
    transition: 0.5s ease opacity;
    min-height: 600px;

    .l-Text {
        font-size: 1rem;
    }

    @media (max-width: $break-sm) {
        padding-left: 5%;
        padding-right: 5%;
    }

    &.white-bg {
        background-image: url("/content/dam/sites/kaousa/www-biore-com/us/skinplan/bubble-background-dark.png") !important;
        background-color: $solid-white;
    }

    &:before {
        content: "";
        transition: 0.2s ease opacity;
        position: absolute;
        height: 100%;
        width: 100%;
        background-color: $solid-white;
        z-index: -1;
        opacity: 0;
    }

    &.animating:before {
        opacity: 1;
        z-index: 1;
    }


    .skin-choice {
        @media (max-width: $break-sm) {
            padding: 10px 20px;
        }

        img {
            transition: 2s ease opacity, 2s ease transform;
            opacity: 0;
            margin-top: 30px;

            @media (max-width: $break-sm) {
                margin-top: 0;
            }
        }

        &.left {
            img {
                &.animate {
                    transform: translateX(25px);
                    opacity: 1;

                    @media (max-width: $break-sm) {
                        transform: translateX(0px);
                    }
                }
            }
        }

        &.right {
            img {
                &.animate {
                    transform: translateX(-25px);
                    opacity: 1;

                    @media (max-width: $break-sm) {
                        transform: translateX(0px);
                    }
                }
            }
        }
    }

    .userAge {
        li {
            opacity: 0;
            margin-top: 80px;
            transition: 0.5s;

            &.animate {
                transform: translateY(-50px);
                opacity: 1;

                @media (max-width: $break-sm) {
                    transform: translateY(0px);
                }
            }

            &:nth-child(1) {
                transition: 1s ease opacity 0s, 1s ease transform 0s;
            }

            &:nth-child(2) {
                transition: 1s ease opacity 0.1s, 1s ease transform 0.1s;
            }

            &:nth-child(3) {
                transition: 1s ease opacity 0.1s, 1s ease transform 0.2s;
            }

            &:nth-child(4) {
                transition: 1s ease opacity 0.1s, 1s ease transform 0.3s;
            }
        }
    }

    .sub-result {
        img {
            transition: 1s ease opacity, 1s ease transform;
            opacity: 0;
            margin-top: 30px;

            &.animate {
                transform: translateY(-25px);
                opacity: 1;

                @media (max-width: $break-sm) {
                    transform: translateY(0px);
                }
            }
        }

        .g-HeadingTitle {
            .g-Text {
                font-size: 1.5625rem;
                font-family: $skinplan-btn-font;
            }

            .g-HeadingTitle__h2 {
                font-size: 2.5rem;
                font-family: $skin-type-font;
                margin-bottom: 2rem;

                @media (max-width: $break-sm) {
                    margin-bottom: 0rem;
                }
            }
        }
    }

    .g-Section__inner {
        max-width: 900px;
        padding-top: 5%;
        padding-bottom: 5%;

        @media (max-width: $break-sm) {
            padding-left: 0;
            padding-right: 0;
        }

        .g-Column {
            &.landing-section {

                #start {
                    img {
                        transition: 2s ease opacity, 2s ease transform;
                        opacity: 0;
                        margin-top: 30px;

                        &.animate {
                            transform: translateY(-25px);
                            opacity: 1;

                            @media (max-width: $break-sm) {
                                transform: translateY(0px);
                            }

                            &:hover {
                                transform: translateY(-35px);

                                @media (max-width: $break-sm) {
                                    transform: translateY(0px);
                                }
                            }
                        }
                    }
                }
            }

            &.question1 {
                display: none;

                .skin-choice {
                    &.oily {
                        img {
                            //                            opacity: 0;
                        }
                    }

                    &.combination {
                        img {
                            //                            opacity: 0;
                        }
                    }
                }
            }

            &.sub-result-charcol {
                display: none;

                .g-Image {
                    img {
                        //                        opacity: 0;
                        position: relative;
                    }
                }
            }

            &.sub-result-baking-soda {
                display: none;

                .g-Image {
                    img {
                        //                        opacity: 0;
                        position: relative;
                    }
                }
            }

            &.sub-result-btn-pack {
                display: none;

                .g-ButtonP__list__item {
                    a {
                        background-color: $sp-btn-color;
                        font-size: 20px;
                        padding: 10px 30px;
                        border: none;
                        border-radius: 0;
                        transition: 0.3s;

                        @media (max-width: $break-sm) {
                            min-width: 180px;
                        }

                        &:hover {
                            background-color: $sp-btn-hvr-color;
                            transition: 0.3s;
                        }
                    }

                    &:first-child {
                        a {
                            .cmn-richtext {
                                &::before {
                                    content: '\f104';
                                    font-family: icomoon;
                                    line-height: 22px;
                                    top: 2px;
                                    position: relative;
                                    height: 22px;
                                    display: inline-block;
                                }
                            }
                        }
                    }

                    &:last-child {
                        a {
                            .cmn-richtext {
                                &::after {
                                    content: '\f105';
                                    font-family: icomoon;
                                    line-height: 22px;
                                    top: 2px;
                                    position: relative;
                                    height: 22px;
                                    display: inline-block;
                                }
                            }
                        }
                    }
                }
            }
        }
    }

    .question1,
    .question2,
    .question3,
    .question4,
    .sub-result-charcol,
    .sub-result-baking-soda,
    .sub-result-btn-pack {
        display: none;
    }

    #start,
    .skin-choice {
        cursor: pointer;
    }

    #start {
        padding: 0;
    }

    .g-ButtonUnit__link {
        cursor: pointer;
    }

    .question4 {
        .g-ListP {
            text-align: center;

            .g-ListP__ul {
                padding: 0;
                display: inline-block;

                @media (max-width: $break-sm) {
                    max-width: 300px;
                    margin-left: -15px;
                    margin-right: -15px;
                }

                .g-ListP__ul__item {
                    width: 120px;
                    height: 120px;
                    line-height: 28px;
                    display: table;
                    border-radius: 50%;
                    background-color: $sp-age-color;
                    color: $solid-white;
                    float: left;
                    margin-left: 20px;
                    margin-right: 20px;
                    font-size: 1.25rem;
                    cursor: pointer;

                    @media (max-width: $break-sm) {
                        float: left;
                        margin: 15px;
                    }

                    &:hover {
                        background-color: $hover-age-clr;
                        transition: 0.5s;
                    }

                    .g-ListUnit {
                        display: table-cell;
                        vertical-align: middle;
                    }
                }
            }
        }
    }

    &.final-results {
        display: none;

        ._0,
        ._1,
        ._2,
        ._3,
        ._4,
        ._5,
        ._6,
        ._7,
        ._8,
        ._9,
        ._10,
        ._11 {
            display: none;
            color: $results-heading-color;
            margin-bottom: 2rem;
            font-size: 0.9375rem;

            .g-HeadingTitle {
                .g-HeadingTitle__h2 {
                    font-size: 1.5625rem;
                    font-weight: $wt300;
                }

                .g-Text {
                    font-size: 0.9375rem;
                    font-weight: $wt600;
                }

                &.g-HeadingTitle--h3 {
                    .g-HeadingTitle__h3 {
                        font-size: 1.5625rem;
                    }

                    .g-Text {
                        font-weight: $wt300;
                    }
                }
            }

            .g-ButtonP {
                .g-ButtonUnit__link {
                    border: none;
                    padding: 10px 30px;
                    background-color: $btn-bg-color;
                    border-radius: 0;
                    font-family: $skinplan-btn-font;
                    font-size: 1.125rem;

                    &:hover {
                        background-color: $btn-bg-color-hvr;
                        text-decoration: underline;
                        transition: 0.4s
                    }
                }
            }

            &.daily-js {
                .g-HeadingTitle {
                    &.g-HeadingTitle--h3 {
                        .g-HeadingTitle__h3 {
                            color: $daily-color !important;
                        }
                    }
                }
            }

            &.weekly-js {
                .g-HeadingTitle {
                    &.g-HeadingTitle--h3 {
                        .g-HeadingTitle__h3 {
                            color: $weekly-color !important;
                        }
                    }
                }
            }
        }

        .print-button {
            .g-ButtonP__list__item {
                a {
                    background-image: url(/content/dam/sites/kaousa/www-biore-com/us/skinplan/icon-print.png) !important;
                    background-color: transparent;
                    background-size: 31px 27px;
                    background-position: 10% center;
                    padding-left: 30%;
                    color: $sp-btn-color;
                    font-size: 1rem;
                    min-width: 110px;
                    font-family: $skinplan-btn-font;
                }
            }
        }

        .final-results-heading {
            .g-HeadingTitle__titleBlock__titleBox__title {
                margin-bottom: 0;

                .g-HeadingTitle__h2 {
                    position: relative;

                    &::before {
                        content: '';
                        width: 100%;
                        height: 2px;
                        position: absolute;
                        left: 0;
                        top: calc(50% - 1px);
                        background-color: $daily-color;
                    }

                    .cmn-richtext span {
                        background-color: $daily-color;
                        padding-left: 20px;
                        padding-right: 20px;
                        position: relative;
                        color: $solid-white;
                        font-size: 1.375rem;
                        line-height: 3.125rem;
                        display: inline-block;
                        width: 270px;

                        @media (max-width: $break-sm) {
                            width: 200px;
                        }
                    }
                }
            }

            &.weekly {
                .g-HeadingTitle__h2 {
                    &::before {
                        background-color: $weekly-color;
                    }

                    .cmn-richtext span {
                        background-color: $weekly-color;
                    }
                }
            }
        }
    }

}

.tips-section {
    padding-top: 2rem;
    padding-bottom: 8rem;
    max-width: 100%;
    min-height: auto;

    @media (max-width: $break-sm) {
        padding-top: 2rem;
        padding-bottom: 1rem;
    }

    .g-Section__inner {
        max-width: 1024px;

        .g-Image {
            img {
                margin-left: 0;

                @media (max-width: $break-sm) {
                    margin-left: auto;
                }
            }
        }

        .g-Text {
            max-width: 65%;
            font-size: 1rem;
            color: #fff;

            @media (max-width: $break-sm) {
                max-width: 100%;
            }
        }

        .g-ButtonP {
            .g-ButtonUnit {
                a {
                    font-size: 1.25rem;
                    padding: 10px 30px;
                    border-radius: 0;
                    border: none;
                    font-weight: $wt300;
                    font-family: $skinplan-btn-font;
                    background-color: $btn-bg-color-hvr-1;
                    display: inline-block;
                    transition: 0.2s;

                    &:hover {
                        background-color: $btn-bg-color-hvr-1;
                        transition: 0.4s;
                    }
                }
            }
        }

    }
}

@media print {
    .g-ButtonP {
        display: none;
    }
}