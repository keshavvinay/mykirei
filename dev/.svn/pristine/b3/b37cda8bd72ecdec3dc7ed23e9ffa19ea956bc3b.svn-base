@charset "utf-8";
/*
 Break-Point
 @param $point (sm, md, lg)
 */
@mixin bp($point) {
  @if $point == sm {
    @media only screen and (max-width: $breakpoint_sm) {
      @content;
    }
  } @else if $point == md {
    @media only screen and (min-width: $breakpoint_sm + 1px) and (max-width: $breakpoint_md) {
      @content;
    }
  } @else if $point == lg {
    @media only screen and (min-width: $breakpoint_md + 1px) {
      @content;
    }
  }
}


/*
