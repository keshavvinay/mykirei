@charset "utf-8";

/*  your_look_prompt */

.jf-your_look_prompt {
  display: flex;
  clear: both;
  justify-content: center;
  overflow: hidden;
  margin: 0;
  .l-ImageTextHP__contentsBlock {
    position: relative;
    display: block;
    flex-basis: 100%;
    box-sizing: border-box;
    background: $contactUsgreylight;
    padding: 0;
    text-align: center;
    margin: 2em 10px;
    &:before {
      content: "";
      display: block;
      position: absolute;
      top: -30px;
      left: 0;
      width: 100%;
      height: 1px;
      border-bottom: solid 1px $txtgreylight;
    }
    .l-ImageTextHP__contentsBlock__image {
      width: 100%;
      max-width: 100%;
      display: block;
      float: none;
      clear: both;
      padding: 0;
      margin-bottom: 1em !important;
      overflow: hidden;
    }
    .l-ImageTextHP__contentsBlock__text {
      width: 100%;
      max-width: 100%;
      box-sizing: border-box;
      padding: 18px !important;
      display: block;
      clear: both;
    }
    .l-Image {
      margin: 0;
      img.is-autoWidth {
        width: auto !important;
      }
    }
    .l-HeadingTitle {
      margin: 0;
    }
    .l-HeadingTitle__titleBlock__titleBox__title {
      margin: 0;
    }
    .l-Text {
      margin: 1em 0;
      opacity: 0.75;
      font-size: (14rem / 16);
      line-height: normal;
    }
    .l-HeadingTitle__h2 {
      font-size: (48rem / 16);
      margin: 0;
      line-height: 0.85em;
      margin: .2em 0 0;
    }
    .l-HeadingTitle__titleBlock__titleBox {
      .l-Text {
        margin: 0;
        font-size: (14rem / 16);
        line-height: 1.95rem;
        display: block;
        width: 100%;
        clear: both;
        opacity: 1;
      }
    }
    .l-TextLinkP {
      margin: 0;
    }
    .l-TextLinkUnit {
      margin: 0;
    }
    .l-TextLinkUnit__link {
      font-size: (18rem / 16);
      display: inline-block;
      position: relative;
      transition: color .2s cubic-bezier(.645, .045, .355, 1);
      margin-bottom: 1em;
      &:after {
        content: "";
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 100%;
        height: 3px;
        background-color: $black;
        transition: all .2s cubic-bezier(.645, .045, .355, 1);
      }
    }
    @include bp(md) {
      text-align: left;
      align-items: center;
      justify-content: center;
      display: flex;
      margin: 3em 10px;
      &:before {
        top: -45px;
      }
      .l-ImageTextHP__contentsBlock__image, .l-ImageTextHP__contentsBlock__text {
        flex-basis: 50%;
        flex: 1;
        margin-bottom: 0 !important;
      }
      .l-Text {
        margin-top: 0;
      }
      .l-HeadingTitle__h2 {
        margin-bottom: .4em;
        font-size: (48rem / 16);
      }
      .l-TextLinkUnit__link {
        margin-bottom: 0;
        &:hover {
          color: $moreLinkHover;
          &:hover:after {
            background: $moreLinkHover;
            transform: scaleX(0);
          }
        }
        &:active {
          color: $moreLinkActive;
          &:after {
            transform: scaleX(0);
          }
        }
      }
    }
    @include bp(lg) {
      max-width: 75%;
      width: 75%;
      margin: 3em 12.5% 3em 12.5%;
      text-align: left;
      align-items: center;
      justify-content: center;
      display: flex;
      &:before {
        display: none;
      }
      .l-Text {
        font-size: (18rem / 16);
        max-width: 80%;
      }
      .l-ImageTextHP__contentsBlock__image, .l-ImageTextHP__contentsBlock__text {
        flex-basis: 50%;
        flex: 1;
        margin-bottom: 0 !important;
      }
      .l-Text {
        margin-top: 0;
      }
      .l-HeadingTitle__h2 {
        margin-bottom: .4em;
        font-size: (60rem / 16);
      }
      .l-HeadingTitle__titleBlock__titleBox {
        .l-Text {
          max-width: none;
          font-size: (18rem / 16);
        }
      }
      .l-TextLinkUnit__link {
        margin-bottom: 0;
        &:hover {
          color: $moreLinkHover;
          &:hover:after {
            background: $moreLinkHover;
            transform: scaleX(0);
          }
        }
        &:active {
          color: $moreLinkActive;
          &:after {
            transform: scaleX(0);
          }
        }
      }
    }
  }
}
