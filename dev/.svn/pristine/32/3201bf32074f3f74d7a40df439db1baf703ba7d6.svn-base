.ip-drink__qa__link.g-Column {
  width: 66.7%;
  margin: 0 auto 16px;
  .l-Image {
    position: relative;
    display: block;
    border: 1px solid $colorLine_01;
    background-color: $colorMain_05;
    padding: 20px 0;
    text-decoration: none;
    .l-Image__img {
      position: relative;
      width: 50%;
      margin: 0 auto;
      &:after {
        @include link_arrow($colorLink_ip, $colorIcon_light);
        right: -45px;
      }
    }
    &:hover {
      @include opacity($linkHoverOpacity);
    }
  }
  @include bp(md) {
    width: 80%;
  }
  @include bp(sm) {
    width: auto;
    margin: 6px 0 0;
    .l-Image {
      position: relative;
      display: block;
      padding: 15px 0 15px 9px;
      .l-Image__img {
        position: static;
        width: 73.3%;
        margin: 0;
        &:after {
          right: 9px;
        }
      }
    }
  }
}

//リニューアル
.ip-drink__element__section {
  .g-Section__inner {
    padding-top: 8px;
    padding-bottom: 40px;
  }
  .g-HeadingTitle__h2 {
    @include fontSizeNum(24);
    font-family: $fontFamily_Mincho;
  }
  .ip-drink__element__image {
    max-width: 520px;
    margin: 30px auto 20px;
  }
