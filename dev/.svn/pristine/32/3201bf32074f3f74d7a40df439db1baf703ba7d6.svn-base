.ip-drink__drinking-woman__illust {
  max-width: 640px;
  margin: 10px auto 0;
  position: relative;
  @include bp(md) {
    .g-ImageTextHP__contentsBlock__image {
      width: 35%;
      position: absolute;
      bottom: 0;
    }
  }
  @include bp(sm) {
    max-width: 355px;
    margin-top: 20px;
    .g-ImageTextHP__contentsBlock__image {
      width: 35%;
      position: absolute;
      bottom: 0;
    }
  }
  .g-Image {
    margin-bottom: 0;
  }
  .g-ImageTextHP__contentsBlock__text {
    position: relative;
    margin-bottom: 5px;
    @include bp(md) {
      width: 65%;
      min-width: 360px;
    }
    @include bp(sm) {
      width: 65%;
    }
    .g-Text {
      background-color: #fffccc;
      border-radius: 10px;
      margin: 25px 0 0 30px;
      text-align: center;
      font-family: $fontFamily_Mincho;
      padding-top: 16px;
      @include fontSizeNum(23);
      .opt-fontsize--s {
        @include fontSizeNum(14);
        line-height: 3em;
      }
      &:after {
        position: absolute;
        top: 50%;
        display: block;
        content: " ";
        width: 0;
        height: 0;
        border-style: solid;
        border-width: 11px 25px 11px 0;
        border-color: transparent #fffccc transparent transparent;
        margin-left: -24px;
      }
      @include bp(sm) {
        margin: 0;
        font-family: $fontFamily_Gothic;
        padding-top: 4px;
        padding-bottom: 2px;
        @include fontSizeNum(15);
        .opt-fontsize--s {
          @include fontSizeNum(11);
          line-height: 1.2em;
        }
        &:after {
          margin-top: -11px;
        }
      }
    }
  }
}

