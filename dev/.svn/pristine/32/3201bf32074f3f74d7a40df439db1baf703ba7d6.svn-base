@charset "utf-8";

/* iP drink ============================== */
////////////////////////////////////
//
// main visual
//
////////////////////////////////////

.ip-drink__mainVisual__section {
  background-color: #00335b;
  .g-Image {
    margin-bottom: 0;
  }
}

#monitor_block {
  padding-top: 100px;
  margin-top: -100px;
}

//anchor
.ip-drink__anchorList__section {
  .g-Section__inner {
    padding-top: 28px;
    @include bp(sm) {
      padding-top: 15px;
      padding-bottom: 6px;
    };
  }
}

.ip-drink__anchorList__column {
  margin-top: 20px;
  border-top: 1px solid #57b4c8;
  border-bottom: 1px solid #57b4c8;
  padding: 30px 10px 18px;
  @include bp(sm) {
    padding: 15px 0 3px;
  };
  .l-TextLinkP__list {
    @include bp(lg) {
      margin-left: -4px;
      margin-right: -4px;
    }
    @include bp(md) {
      margin-left: -4px;
      margin-right: -4px;
    }
  }
  .l-TextLinkP__list__item {
    @include bp(lg) {
      padding-left: 4px !important;
      padding-right: 4px !important;
    }
    @include bp(md) {
      padding-left: 4px !important;
      padding-right: 4px !important;
    }
  }
  .l-TextLinkUnit__link {
    position: relative;
    padding-left: 34px;
    color: $colorLink_ip;
    &:after {
      position: absolute;
      display: block;
      font-family: 'icomoon-ip';
      content: "\e609";
      width: 24px;
      height: 24px;
      left: 0;
      top: 12px;
      margin-top: -12px;
      background-color: $colorMain_05;
      @include border-radius(50%);
      color: $colorLink_ip;
      @include fontSizeNum(14);
      line-height: 24px;
      text-align: center;
    }
    &:link, &:visited {
      color: $colorLink_ip;
    }
  }
}
////////////////////////////////////
//
// メインビジュアル下テキスト
//
////////////////////////////////////
.ip-drink__lead__section {
  .g-Section__inner {
    @include bp(lg) {
      padding-bottom: 40px;
    }
  }
  .g-Column__cols-lg-2 {
    &:first-child {
      @include bp(lg) {
        width: 30%;
      }
      @include bp(md) {
        width: 35%;
      }
    }
    &:last-child {
      @include bp(lg) {
        width: 70%;
      }
      @include bp(md) {
        width: 65%;
      }
    }
  }
}

.ip-drink__lead__image__columnUnit {
  .l-Image {
    max-width: 193px;
    margin: 36px auto 0;
    @include bp(sm) {
      max-width: 115px;
      margin: 0 auto 10px;
    }
  }
}

.ip-drink__lead__content__columnUnit {
  position: relative;
  z-index: 2;
  .ip-banner__block {
    @include bp(lg) {
      display: block;
      position: absolute;
      right: 0;
      top: 0;
      width: 220px;
    }
    @include bp(md) {
      display: none;
    }
    @include bp(sm) {
      overflow: hidden;
      width: 100%;
      margin-top: 16px;
    }
    .g-Image:first-child {
      padding-bottom: 14px;
      margin: 0 auto;
      width: 100%;
      @include bp(sm) {
        width: 68.3%;
        padding-bottom: 10px;
      }
    }
    .g-Image:nth-child(n+2) {
      @include bp(sm) {
        margin: 0 auto;
        width: 68.3%;
      }
    }
  }
  .l-HeadingTitle {
    margin-bottom: 15px;
  }
  .l-HeadingTitle__h2 {
    @include fontSizeNum(24);
    line-height: 1.5;
    font-weight: normal;
    @include bp(lg) {
      padding-right: 240px;
    }
  }
  .l-Text {
    @include fontSizeNum(14);
    line-height: 1.5;
  }
  .g-HeadingTitle:not(.is-link) {
    .l-HeadingTitle__h2 {
      color: $colorLink_ip;
    }
  }
  @include bp(sm) {
    margin: 0 0 8px;
    .l-HeadingTitle {
      margin-bottom: 6px;
    }
    .l-HeadingTitle__h2 {
      @include fontSizeNum(16);
    }
    .l-Text {
      @include fontSizeNum(14);
    }
  }
}

.ip-drink__lead__text {
  @include bp(lg) {
    padding-right: 240px;
  }
}
.ip-banner__block--md {
  display: none;
  @include bp(md) {
    display: block;
    float: left;
    width: 50%;
    margin-top: 20px;
  }
  .g-Image:first-child {
    padding-bottom: 14px;
    margin: 0 auto;
    width: 100%;
    @include bp(sm) {
      width: 68.3%;
      padding-bottom: 10px;
    }
  }
  .g-Image:nth-child(n+2) {
    @include bp(sm) {
      float: left;
      width: 68.3%;
    }
  }
}

.ip-drink__lead__description__wrapper {
  position: relative;
  z-index: 1;
  margin: 0 50px 26px;
  @include bp(sm) {
    margin: 0 0 6px;
  }
  .g-Column__cols:first-child {
    @include bp(lg) {
      display: none;
    }
    @include bp(sm) {
      display: none;
    }
  }


}

// バナーブロック下、無料お届けサービス他
.ip-banner__block__linkList {
  margin-top: 25px;
  @include bp(sm) {
    margin-top: 20px;
  }
  .l-TextLinkUnit {
    margin: 0 0 20px;
  }
  .l-TextLinkP__list__item {
    width: 100%;
    display: block;
  }
  .ip-banner__block__delivery {
    .l-TextLinkUnit__link {
      & >.cmn-richtext {
        &:after {
          content: "";
          @include img_main("icon_window.png");
          display: inline-block;
        }
      }
    }
  }
  .l-TextLinkUnit__link {
    display: block;
    border: 1px solid #57b4c8;
    b {
      @include fontSizeNum(18);
      line-height: 1.5;
      font-weight: bold;
      color: #ff268c;
      text-decoration: underline;
      span {
        white-space: nowrap;
      }
    }
    & >.cmn-richtext {
      padding: 12px 10px 12px 15px;
      @include fontSizeNum(14);
      line-height: 1.5;
      color: #333;
      text-decoration: none;
      letter-spacing: normal;
    }
    &:hover {
      opacity: .7;
    }
    @include bp(sm) {
      & >.cmn-richtext {
        padding: 12px 8px 12px 12px;
        @include fontSizeNum(12);
        b {
          @include fontSizeNum(16);
        }
      }
    }
  }
  .l-TextLinkUnit__link__icon {
    display: none;
  }
  .ip-banner__block__shop__link {
    display: inline-block;
    position: relative;
    margin-top: 8px;
    padding-left: 22px;
    color: $colorLink_ip;
    &:before {
      @include link_arrow_2($colorLink_ip, $colorMain_05);
      left: 0;
      right: auto;
    }
  }
}
.ip-banner__block__delivery {
  clear: both;
}
.ip-banner__block__shop {
  .l-TextLinkUnit__link {
    display: block;
    border: 1px solid #57b4c8;
  }
}

.ip-drink__lead__description {
  padding: 15px 0 4px 0;
  @include bp(lg) {
    margin-right: 240px;
  }
  @include bp(md) {
    float: right;
    width: 45%;
    margin-top: 20px;
  }
  border-top: 1px solid $colorLine_01;
  border-bottom: 1px solid $colorLine_01;
  .l-HeadingTitle__h3 {
    @include fontSizeNum(16);
    line-height: 1.5;
    font-weight: normal;
  }
  .l-Text {
    @include fontSizeNum(14);
    line-height: 1.5;
  }
  .is-link {
    .l-LinkButton__link:link {
      position: relative;
      color: $colorLink_ip;
      padding-left: 22px;
      @include fontSizeNum(14);
      line-height: 1.5;
      text-decoration: none;
      &:before {
        @include link_arrow_2($colorLink_ip, $colorMain_05);
        left: 0;
        right: auto;
      }
      &:after {
        right: -18px;
        content: "";
        position: absolute;
        @include img_main("icon_window.png");
        @include vMiddle();
      }
    }
    .l-LinkButton__link:visited {
      color: $colorLink_ip;
      text-decoration: none;
    }
  }
  .g-HeadingTitle:not(.is-link) {
    .l-HeadingTitle__h3 {
      color: $colorLink_ip;
    }
  }
  @include bp(sm) {
    padding: 10px 0 0;
    .l-HeadingTitle__h3 {
      @include fontSizeNum(14);
    }
    .l-Text {
      @include fontSizeNum(12);
    }
    .l-LinkButton__link:link {
        @include fontSizeNum(12);
      }
  }
}

////////////////////////////////////
//
// 囲み記事
//
////////////////////////////////////

.ip-column__bordered {
  margin-bottom: 30px;
  .g-Section__inner {
    border: 1px solid $colorLine_01;
    padding: 0;
    max-width: 960px;
  }
  @include bp(md) {
    margin: 0 32px 30px;
  }
  @include bp(sm) {
    margin-bottom: 15px;
    .g-Section__inner {
      max-width: none;
      margin: 0 10px;
    }
  }
}
.ip-drink__column__title {
  &.g-HeadingTitle {
    margin-bottom: 28px;
    background-color: $colorMain_05;
    .l-HeadingTitle__titleBlock__titleBox {
      vertical-align: middle;
      height: 59px;
    }
    .l-HeadingTitle__h2 {
      @include fontSizeNum(24);
      font-weight: normal;
      font-family: $fontFamily_Mincho;
    }
    @include bp(sm) {
      padding: 10px;
      margin-bottom: 11px;
      .l-HeadingTitle__titleBlock__titleBox {
        height: auto;
      }
      .l-HeadingTitle__h2 {
        @include fontSizeNum(16);
        font-family: $fontFamily_Gothic;
      }
    }
  }
}
.ip-drink__column__contents {
  margin: 0 50px;
  padding-bottom: 30px;
  @include bp(sm) {
    margin: 0 9px;
    padding-bottom: 13px;
  }
}
