.ip-drink__chlorogenic {
  .l-ImageTextHP {
    padding-left: 49px;
    padding-right: 49px;
    @include bp(sm) {
      padding-left: 10px;
      padding-right: 10px;
    }
  }
}
.ip-drink__chlorogenic__title:not(.is-link) {
  margin: 0;
  .l-HeadingTitle__h3 {
    @include fontSizeNum(20);
    line-height: 1.5;
    font-weight: normal;
    color: $colorLink_ip;
    @include bp(sm) {
      @include fontSizeNum(14);
    }
  }
  .l-Text {
    @include fontSizeNum(14);
    margin-bottom: 0;
    @include bp(sm) {
      @include fontSizeNum(10);
    }
  }
}
.ip-drink__chlorogenic__text {
  @include fontSizeNum(14);
  line-height: 1.5;
  padding: 10px 0 30px;
  @include bp(sm) {
    @include fontSizeNum(12);
    padding-bottom: 16px;
  }
}

.ip-drink__monitor {
  .l-Section__inner {
    max-width: 960px;
    border: 6px solid #faf063;
    padding: 0 0 25px;
    @include bp(md) {
      margin-left: 32px;
      margin-right: 32px;
    }
    @include bp(sm) {
      padding-bottom: 10px;
      margin-left: 10px;
      margin-right: 10px;
      border-width: 3px;
    }
  }
}
.ip-drink__monitor__application {
  padding: 10px 44px 18px;
  @include bp(sm) {
    padding: 10px 12px 0;
  }
  .l-Column__cols {
    &:first-child {
      .l-ColumnUnit {
        padding-right: 20px;
        @include bp(sm) {
          padding: 0;
        }
      }
      .l-ButtonUnit__link {
        background-color: #ecf9fc;
        border-color: #57b4c8;
        .cmn-richtext {
          color: 333;
          span {
            &:after {
              @include img_main("icon_window.png");
            }
          }
        }
      }
    }
    &:last-child {
      .l-ColumnUnit {
        padding-left: 20px;
        @include bp(sm) {
          padding: 0;
        }
      }
      .l-ButtonUnit__link {
        background-color: #008cab;
        border-color: #008cab;
        .cmn-richtext {
          span {
            &:after {
              @include img_main("icon_window_reverse.png");
            }
          }
        }
      }
    }
    @include bp(sm) {
      padding-bottom: 16px;
      .l-ButtonUnit__link {
        display: block;
      }
    }
  }
  .l-Text {
    margin-bottom: 14px;
    @include fontSizeNum(14);
    line-height: 1.5;
    strong {
      color: #ff268c;
      font-weight: bold;
    }
  }
  .l-ButtonUnit__link {
    border-radius: 0;
    box-shadow: none;
    border: 1px solid;
    text-align: center;
    .cmn-richtext {
      @include fontSizeNum(20);
      @include bp(sm) {
        @include fontSizeNum(18);
      }
      span {
        position: relative;
        padding-right: 26px;
        &:after {
          position: absolute;
          content: "";
          display: block;
          width: 13px;
          height: 9px;
          right: 0;
          top: 50%;
          margin-top: -4px;
        }
      }
    }
  }
}
.ip-drink__monitor__contact__title {
  padding: 15px 44px 0;
  .l-Column__cols {
    padding-bottom: 0 !important;
  }
  .l-HeadingTitle {
    margin-bottom: 0;
  }
  @include bp(sm) {
    padding: 0 10px;
  }
}
.ip-drink__monitor__contact__title:not(.is-link) {
  .l-HeadingTitle__h4 {
    @include fontSizeNum(16);
    line-height: 1.5;
    font-weight: normal;
    color: $colorLink_ip;
    @include bp(sm) {
      @include fontSizeNum(14);
    }
  }
}
.ip-drink__monitor__note {
  padding: 0 44px;
  @include bp(sm) {
    padding: 0 12px;
  }
  .l-Text {
    @include fontSizeNum(12);
  }
}
.ip-drink__monitor__contact {
  padding: 0 44px;
  @include bp(sm) {
    padding: 0 12px;
  }
  .l-Column__cols {
    &:first-child {
      width: 18.6%;
      .l-Text {
        @include fontSizeNum(14);
      }
      @include bp(sm) {
        padding-top: 4px;
        padding-bottom: 0;
        width: 100%;
        .l-HeadingTitle {
          margin-bottom: 0;
        }
        .l-Text {
          margin-bottom: 0;
          @include fontSizeNum(12);
        }
      }
    }
    &:last-child {
      width: 81.4%;
      @include bp(sm) {
        padding-top: 0;
        padding-bottom: 0;
        width: 100%;
      }
    }
  }
}
.ip-drink__monitor__contact__info {
  padding-bottom: 5px;
  .l-Text {
    @include fontSizeNum(14);
    line-height: 1.5;
    .ip-drink__monitor__contact__info__tel {
      display: block;
      @include fontSizeNum(20);
      line-height: 1.5;
    }
    .ip-drink__monitor__contact__info__note {
      display: block;
      @include fontSizeNum(12);
      line-height: 1.5;
    }
    @include bp(sm) {
      margin-bottom: 0;
      @include fontSizeNum(12);
      .ip-drink__monitor__contact__info__tel {
        @include fontSizeNum(16);
      }
      .ip-drink__monitor__contact__info__note {
        @include fontSizeNum(10);
      }
    }
  }
}

