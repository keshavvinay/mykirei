      border-color: $option__border--04;
    }
  }
  &.is-content-borderColor--5 {
    .l-TabMenu__item {
      border-color: $option__border--05;
    }
  }
  &.is-content-borderColor--6 {
    .l-TabMenu__item {
      border-color: $option__border--06;
    }
  }
  &.is-content-borderColor--7 {
    .l-TabMenu__item {
      border-color: $option__border--07;
    }
  }

  &.is-content-backgroundColor--1 {
    .l-TabMenu__item {
      background-color: $option__bg--01;
    }
  }
  &.is-content-backgroundColor--2 {
    .l-TabMenu__item {
      background-color: $option__bg--02;
    }
  }
  &.is-content-backgroundColor--3 {
    .l-TabMenu__item {
      background-color: $option__bg--03;
    }
  }
  &.is-content-backgroundColor--4 {
    .l-TabMenu__item {
      background-color: $option__bg--04;
    }
  }
  &.is-content-backgroundColor--5 {
    .l-TabMenu__item {
      background-color: $option__bg--05;
    }
  }
  &.is-content-backgroundColor--6 {
    .l-TabMenu__item {
      background-color: $option__bg--06;
    }
  }
  &.is-content-backgroundColor--7 {
    .l-TabMenu__item {
      background-color: $option__bg--07;
    }
  }
  

  .l-TabMenu__nav__link {
    border-color: $tabmenu__tab__border;
    background-color: $tabmenu__tab__bg;
    border-bottom-color: $tabmenu__content__border;
    .l-HeadingTitle {
      .l-HeadingTitle__h2,
      .l-HeadingTitle__h3,
      .l-HeadingTitle__h4,
      .l-HeadingTitle__h5,
      .l-HeadingTitle__h6,
      .l-HeadingTitle__p {
        color: $tabmenu__tab__text;
      }
      .is-authorring & {
        color: $tabmenu__tab__text;
      }
    }
    &:hover {
      border-color: $tabmenu__tab__border--hover;
      background-color: $tabmenu__tab__bg--hover;
      border-bottom-color: $tabmenu__content__border;
      .l-HeadingTitle {
        .l-HeadingTitle__h2,
        .l-HeadingTitle__h3,
        .l-HeadingTitle__h4,
        .l-HeadingTitle__h5,
        .l-HeadingTitle__h6,
        .l-HeadingTitle__p {
          color: $tabmenu__tab__text--hover;
        }
        .is-authorring & {
          color: $tabmenu__tab__text--hover;
        }
      }
    }
    &.is-active {
      border-color: $tabmenu__tab__border--active;
      background-color: $tabmenu__tab__bg--active;
      border-bottom-color: $tabmenu__tab__bg--active;
      .l-HeadingTitle {
        .l-HeadingTitle__h2,
        .l-HeadingTitle__h3,
        .l-HeadingTitle__h4,
        .l-HeadingTitle__h5,
        .l-HeadingTitle__h6,
        .l-HeadingTitle__p {
          color: $tabmenu__tab__text--active;
        }
        .is-authorring & {
          color: $tabmenu__tab__text--active;
        }
      }
    }
  }

  @each $value in $size_vlues {
    &.is-content-borderradius--#{$value} {
      .l-TabMenu__item {
        @include border-bottom-left-radius(get-radius-value($value));
        @include border-bottom-right-radius(get-radius-value($value));
      }
    }
  }
}

.l-TabMenu__nav__ctl {
  background-color: $tabmenu__control__bg;
  border-color: $tabmenu__control__border;
  border-bottom-color: $tabmenu__content__border;
  &:before {
    color: $tabmenu__control__icon;
  }
  &:hover {
    background-color: $tabmenu__control__bg--hover;
    border-color: $tabmenu__control__border--hover;
    border-bottom-color: $tabmenu__content__border;
    &:before {
      color: $tabmenu__control__icon--hover;
    }
  }
}

// content
.l-TabMenu__item {
  background-color: $tabmenu__content__bg;
  border-color: $tabmenu__content__border;
}

/* TabMenuUnit ============================== */
.l-TabMenuUnit {
  &.is-gutter--s {
    @include bp(sm) {
      padding-top: $cmn_paddingInner - ( $marginGutterColumn_sm_s / 2 );
      padding-bottom: $cmn_paddingInner - ( $marginGutterColumn_sm_s / 2 );
    }
    @include bp(md) {
      padding-top: $cmn_paddingInner - ( $marginGutterColumn_md_s / 2 );
      padding-bottom: $cmn_paddingInner - ( $marginGutterColumn_md_s / 2 );
    }
    @include bp(lg) {
      padding-top: $cmn_paddingInner - ( $marginGutterColumn_lg_s / 2 );
      padding-bottom: $cmn_paddingInner - ( $marginGutterColumn_lg_s / 2 );
    }
    .l-TabMenuUnit__inner {
      @include gutterColumnWrapper(s);
    }
    .l-TabMenuUnit__cols {
      @include gutterColumnInner(s);
    }
  }
  &.is-gutter--m {
    @include bp(sm) {
      padding-top: $cmn_paddingInner - ( $marginGutterColumn_sm_m / 2 );
      padding-bottom: $cmn_paddingInner - ( $marginGutterColumn_sm_m / 2 );
    }
    @include bp(md) {
      padding-top: $cmn_paddingInner - ( $marginGutterColumn_md_m / 2 );
      padding-bottom: $cmn_paddingInner - ( $marginGutterColumn_md_m / 2 );
    }
    @include bp(lg) {
      padding-top: $cmn_paddingInner - ( $marginGutterColumn_lg_m / 2 );
      padding-bottom: $cmn_paddingInner - ( $marginGutterColumn_lg_m / 2 );
    }
    .l-TabMenuUnit__inner {
      @include gutterColumnWrapper(m);
    }
    .l-TabMenuUnit__cols {
      @include gutterColumnInner(m);
    }
  }
  &.is-gutter--l {
    @include bp(sm) {
      padding-top: $cmn_paddingInner - ( $marginGutterColumn_sm_l / 2 );
      padding-bottom: $cmn_paddingInner - ( $marginGutterColumn_sm_l / 2 );
    }
    @include bp(md) {
      padding-top: $cmn_paddingInner - ( $marginGutterColumn_md_l / 2 );
      padding-bottom: $cmn_paddingInner - ( $marginGutterColumn_md_l / 2 );
    }
    @include bp(lg) {
      padding-top: $cmn_paddingInner - ( $marginGutterColumn_lg_l / 2 );
      padding-bottom: $cmn_paddingInner - ( $marginGutterColumn_lg_l / 2 );
    }
    .l-TabMenuUnit__inner {
      @include gutterColumnWrapper(l);
    }
    .l-TabMenuUnit__cols {
      @include gutterColumnInner(l);
    }
  }
  &.is-gutter--xl {
    @include bp(sm) {
      @if $cmn_paddingInner < $marginGutterColumn_sm_xl / 2 {
        padding-top: 0;
        padding-bottom: 0;
      } @else {
        padding-top: $cmn_paddingInner - ( $marginGutterColumn_sm_xl / 2 );
        padding-bottom: $cmn_paddingInner - ( $marginGutterColumn_sm_xl / 2 );
      }
    }
    @include bp(md) {
      @if $cmn_paddingInner < $marginGutterColumn_md_xl / 2 {
        padding-top: 0;
        padding-bottom: 0;
      } @else {
        padding-top: $cmn_paddingInner - ( $marginGutterColumn_md_xl / 2 );
        padding-bottom: $cmn_paddingInner - ( $marginGutterColumn_md_xl / 2 );
      }
    }
    @include bp(lg) {
      @if $cmn_paddingInner < $marginGutterColumn_lg_xl / 2 {
        padding-top: 0;
        padding-bottom: 0;
      } @else {
        padding-top: $cmn_paddingInner - ( $marginGutterColumn_lg_xl / 2 );
        padding-bottom: $cmn_paddingInner - ( $marginGutterColumn_lg_xl / 2 );
      }
    }
    .l-TabMenuUnit__inner {
      @include gutterColumnWrapper(xl);
    }
    .l-TabMenuUnit__cols {
      @include gutterColumnInner(xl);
    }
  }
}
