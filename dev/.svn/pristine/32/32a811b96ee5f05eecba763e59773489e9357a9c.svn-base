@charset "utf-8";

$size_vlues: xs, s, m, l, xl;
@function get-radius-value($size) {
  @if $size == xs {
    @return $borderRadius_xs;
  }
  @if $size == s {
    @return $borderRadius_s;
  }
  @if $size == m {
    @return $borderRadius_m;
  }
  @if $size == l {
    @return $borderRadius_l;
  }
  @if $size == xl {
    @return $borderRadius_xl;
  }
}
