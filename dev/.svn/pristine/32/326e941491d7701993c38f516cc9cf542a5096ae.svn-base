.g.-BrFooter {
    background: $solid-white;
    border: none;
    font-family: $primary-font-Light ;
}
.g-BrFooter__sitemapBlock {
    display: none;
}
.guhl-footer {
    width: 100%;
    margin: 0px auto;
    margin-bottom: 8rem;
    margin-top:30px;
    max-width: 1440px;
    padding:0 32px;
    .social-icons-list {
        ul {
            width: 100%;
            display: table;
            table-layout: fixed;
            border-top: 1px solid $border-color;
            border-bottom: 1px solid $border-color;
            height: 5rem;
            margin-bottom: 4rem !important;
            padding:0;
            li{
                display: table-cell;
                text-align: center;
                padding: 30px 10px !important;
                position: relative;
                @media #{$phone-only} {
                    text-align:left;
                    padding:30px 25px !important;
                }
                .g-ListUnit  {
                    text-decoration:none;
                    position:absolute;
                    width:22px;
                    height:22px;
                    left: 50%;
                    transform: translateX(-50%);
                    &:before {
                        content: ""; 
                    }
                    &.facebook-icon {
                        background: url(/content/dam/sites/kaousa/www-guhl-com/svg/facebook-footer.svg) no-repeat;
                       
                    }
                    &.instagram-icon {
                        background: url(/is/image/content/dam/sites/kaousa/www-guhl-com/svg/instagram.png?wid=22) no-repeat;

                    }
                    &.youtube-icon  {
                        background: url(/is/image/content/dam/sites/kaousa/www-guhl-com/svg/yt.png?wid=30) no-repeat;
                        width:30px;
                    }
                    &.icon-mail3 {
                        background: url(/content/dam/sites/kaousa/www-guhl-com/svg/mail-black.svg) no-repeat;
                        width:29px;
                    }
                }
            }
        }
    }
    .l-TextLinkUnit__link {
        text-transform: uppercase;
        font-size: 15px;
        line-height: 2rem;
        font-family: $primary-font-Medium;
    }
    .l-TextLinkP__list__ite {
        padding: 12px !important;
    }
    .g-LabelTagP {
        display: inline-block;
        width:33%;
        margin: 0;
        text-align: center;
        .g-LabelTagP__list__item {
            margin: 0;
        }
        .g-LabelTagUnit {
            background: transparent;
            color: $solid-black;
            font-family: ConduitITCStd-bold;
            text-transform: uppercase;
            font-size: 18px;
            padding: 0;
        }   
    }
    // Footer newsletter section
    .cookies {
        position: fixed;
        right: 0;
        left: 0;
        padding: .75rem;
        text-align: center;
        background: $solid-black;
        color: $solid-white;
        font-size: .8125rem;
        letter-spacing: 1px;
        bottom: 0;
        display:none;
        .cookies__inner {
            p {
                margin:0;
                line-height: 1.8;
            }
        }
    }
    .newsletter-form {
        display: block;
        padding: 40px 0;
        text-align: center;
        .row {
            max-width: 90rem;
            height: 100%;
            margin-left: auto;
            margin-right: auto;
            overflow-y: auto;
            overflow-x: hidden;
        }
        strong {
            padding-top: 15px;
            width: 30%;
            letter-spacing: 3px;
            text-transform: uppercase;
            float: left;
            color: $solid-black;
            font-size: 18px;
            line-height: normal;
            @media #{$tablet-only} {
                padding-top:7px;
                width:27%;
            }
            @media #{$phone-only} {
                width:100%;
                margin-bottom:20px;
            } 
        }
        label {
            cursor: pointer;
        }
        input[type=email] {
            float: left;
            padding: 15px 30px 15px 0;
            width: 40%;
            font-size: 18px;
            border: 1px solid $solid-black;
            border-width: 1px 0;
            background: $solid-white; 
            border-radius: 0;
            color:$solid-black;
            &:focus {
                outline:none;
            } 
            @media #{$tablet-only} {
                width:38%;
            } 
            @media #{$phone-only} {
                width:100%;
                margin-bottom:20px;
            } 
        }
        .button-label {
            float: left;
            width: 27%;
            button {
                padding: .5rem 0 .2rem;
                font-family: ConduitITCStd-Bold;
                font-size: 18px;
                color:$border-color;
                margin-top: 1px;
                background:transparent;
                border:none;
                text-transform: uppercase;
                letter-spacing: 3px;
                border-bottom: 1px solid $solid-black;
                line-height: normal;
                @media #{$desktop-only} {
                    &:hover {
                        border-top: 1px solid $solid-black;
                        margin-top: 0px!important;
                    }
                }
                &:focus {
                    outline:none;
                }   
            }
            @media #{$tablet-only} {
                width:30%;
            }
            @media #{$phone-only} {
                width:100%;
            } 
        }
        .ext-row-special {
            margin-top:0;
            .form__error {
                margin: 1rem 0 2rem;
                font-size: .8125rem;
                font-family: $primary-font-Bold;
                display: none;
                &.is-active {
                    display:block;
                    color: $solid-black;
                    @media #{$tablet-only} {
                        margin-left:-25px;
                    }
                }
            }
        }
    }
    .form_row {
        display: inline-block;
        width:33%;
        padding-top: 15px;
       
        .form_leftcol {
            display: none;
        }
        .form_rightcol {
            display: inline-block;
            padding-top: 15px;
            width: 90%;
            text-align: center;
            .form_button_submit {
                color: $border-color;
                background: transparent;
                border: 0;
                border-bottom: 1px solid $solid-black;
                padding: 4px 0;
                font-size: 18px;
                text-transform: uppercase;
                font-family: $primary-font-Bold;
                letter-spacing: 3px;
            }
            .form_field_text {
                width: 100% !important;
                border-top: 1px solid $solid-black;
                border-bottom: 1px solid  $solid-black;
                border-left: 0;
                border-right: 0;
                padding: 15px;
                color:  $solid-black;
                font-size: 18px;
            }
        }
    }
    .form_row_description {
        display: none;
    }
}
@media #{$tablet-only}{
    .guhl-footer {
        .g-BrFooter__inner {
            padding:7px 0;
        }
        .form_row {
            .form_rightcol {
                text-align: right;
            }
        }
    } 
}
@media #{$phone-only}{
    .guhl-footer {
        .g-LabelTagP {
            width: 100%;
        }
        .form_row {
            width:100%;
            .form_rightcol {
                text-align:center;
                .form_button_submit {
                    margin-left: 0;
                }
            }
        }
    }        
}

