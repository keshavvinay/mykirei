    margin-bottom: 0;
    visibility: hidden;
  }
  img {
    display: block;
  }
  /*-----------------------*/
  // .sofina-section_mainvisual
  /*-----------------------*/
  @include bp(sm) {
    padding-top: 0;
  }
}
