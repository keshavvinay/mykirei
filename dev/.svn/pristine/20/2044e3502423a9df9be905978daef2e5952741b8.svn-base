////////////////////////////////////
//
// ご挨拶
//
////////////////////////////////////
.sofina-section_greeting {
  color: $colorGray_2;
  .g-Section__inner {
    padding-top: 80px;
    padding-bottom: 100px;
  }
  .g-Column__inner {
    margin: 0px 50px 0px 50px;
    padding: 30px 30px 30px 30px;
    border-top: solid 1px $colorGray_5;
    border-bottom: solid 1px $colorGray_5;
  }
  .l-HeadingTitle__h2 {
    .cmn-richtext {
      @include fontSize(lv3);
      font-weight: normal;
      line-height: 1.2;
    }
    margin-bottom: 10px;
  }
  .cmn-richtext {
    @include fontSize(lv7);
    line-height: 1.8;
  }
  /*-----------------------*/
  // md
  /*-----------------------*/
  @include bp(md) {
    .g-Column__inner {
      margin-right: 0px;
      margin-left: 0px;
      padding-left: 15px;
      padding-right: 15px;
    }
  }
  /*-----------------------*/
  // sm
  /*-----------------------*/
  @include bp(sm) {
    font-family: $fontFamily_Gothic;
    .g-Section__inner {
      padding-top: 40px;
      padding-bottom: 50px;
    }
    .g-Column__inner {
      margin: 0;
      padding: 15px 0px 0px 0px;
    }
    .g-HeadingTitle {
      margin-bottom: 0;
    }
  }
}

.sofina-section_greeting__left {
  display: table-cell;
  vertical-align: middle;
  width: 50%;
  /*-----------------------*/
  // sm
  /*-----------------------*/
  @include bp(sm) {
    display: block;
    width: 100%;
  }
}

.sofina-section_greeting__right {
  display: table-cell;
  vertical-align: middle;
  width: 50%;
  .l-Image {
    padding-left: 30px;
  }
  /*-----------------------*/
  // sm
  /*-----------------------*/
  @include bp(sm) {
    display: block;
    padding-bottom: 15px;
    width: 100%;
    .l-Image {
      padding-left: 10%;
      padding-right: 10%;
    }
  }
}

