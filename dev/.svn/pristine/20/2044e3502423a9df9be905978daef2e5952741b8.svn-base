////////////////////////////////////
//
// メインビジュアル
//
////////////////////////////////////
.sofina-section_mainvisual {
  background-color: #FFF;
  @include bg_main("bps-top-mainvisual.jpg");
  background-size: contain;
  background-position: 50% 0;
  .g-Section__inner {
    position: relative;
    padding: 0;
    max-width: 1336px;
  }
  .g-Column__cols {}
  .l-Image {
    margin-bottom: 0;
    width: 100%;
  }
  // .is-background {
  .l-PageTitle {
    position: relative;
    padding: 0px auto 0px auto;
    max-width: 1336px;
    width: 100%;
    height: 0;
    padding: 0;
    padding-top: 34.558824%;
    background-size: contain;
    background-repeat: no-repeat;
  }
  .l-PageTitle__titleBlock {
    margin: 0;
  }
  .l-PageTitle__h1 {
    position: absolute;
    @include bottomLeft(-4%, 10.0%);

    // font-weight: normal;
    // letter-spacing: 0.1em;
    // @include fontSize(lv3);
    // line-height: 1.6;
    .cmn-richtext {
      // color: #FFF;
      // @include text-shadow(rgba(#000, 0.7) 2px 2px 4px);
      // @include img_main("bps-top-lead-pc@2x.png", 2);
      // span{
      //   display: none;
      // }
    }
  }
  /*-----------------------*/
  // .sofina-section_mainvisual
  /*-----------------------*/
  @include bp(md) {
    .l-PageTitle__h1 {
      @include bottomLeft(-40px, -0px);
    }
  }
  /*-----------------------*/
  // .sofina-section_mainvisual
  /*-----------------------*/
  @include bp(sm) {
    padding-top: 0;
    @include bg_main("bps-top-mainvisual@2x.jpg", 2);
    background-size: contain;
    background-position: 0 0;
    .l-PageTitle {
      padding-top: 53.25%;
    }
    // .is-background {
    //   // background-size: 637px 220px;
    //   // background-position: 50% 100%;
    //   padding-top: 220px;
    // }
    .l-PageTitle__h1 {
      @include bottomLeft(0px, 0px);
      .cmn-richtext {
        // @include img_main("bps-top-lead@2x.png", 2);

      }
    }
  }
}

//ワッペン
.sofina-section_mainvisual__notice {
  position: absolute;
  @include img_bps("banner_notice@2x.png", 2);
  // @include bottomRight(10px, 210px);
  @include bottomRight(10px, 15%);
  .cmn-richtext{
    display: none;
  }
  /*-----------------------*/
  // md
  /*-----------------------*/
  @include bp(md) {
    @include img_bps("banner_notice@2x.png", 3);
    @include bottomRight(5px, 5%);
  }
  /*-----------------------*/
  // sm
  /*-----------------------*/
  @include bp(sm) {}
}

////////////////////////////////////
//
// OPEN
//
////////////////////////////////////
.sofina-section_open {
  display: none;
  padding-bottom: 0px;
  .g-Section__inner{
    padding:0;
  }
  .l-Text{
    margin-bottom: 0;
  }
  .cmn-richtext {

    padding: 10px 10px 10px 10px;
    background-color: #FFF;
    span {
      display: block;
      text-align: center;
      @include fontSize(lv3); //18px
      border-top: solid 1px $colorGray_5;
      border-bottom: solid 1px $colorGray_5;
      padding-top: 15px;
      padding-bottom: 15px;
      font-family: $fontFamily_Gothic;
      font-weight: normal;
    }
  }
  /*-----------------------*/
  // sm
  /*-----------------------*/
  @include bp(sm) {
    display: block;
  }
}


