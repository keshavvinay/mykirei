/**/

////////////////////////////////////
//
// コンテンツ ワークショップ
//
////////////////////////////////////
.sofina-section_cont__workshop {
  padding: 30px 50px 30px 50px;
  margin-top: 40px;
  background-color: $colorGray_8;

  .g-Column__cols {
    &:first-child {
      float: right;
    }
    &:last-child {
      float: left;
    }
  }
  //タイトル
  .l-HeadingTitle {
    position: relative;
    margin-bottom: 20px;
    .l-Text {
      color: $colorGray_2;
      @include fontSize(lv2);
      display: inline-block;
      vertical-align: middle;
    }
    .l-HeadingTitle__titleBlock {
      margin-right: 20px;
      @include bp(sm) {
        margin-right: 0;
      }
      .l-Text {
        font-family: $fontFamily_Title;
      }
    }
    .l-HeadingTitle__titleBlock__titleBox__title {
      display: inline-block;
      vertical-align: middle;
      margin-left: 5px;
    }
  }
  .l-HeadingTitle__h2 {
    @include fontSize(lv7);
    font-weight: normal;
  }
  .l-HeadingTitle:not(.is-link) {
    .l-HeadingTitle__h2 {
      color: #888;
    }
  }
  .l-HeadingTitle__titleBlock {
    display: inline-block;
    width: auto;
    vertical-align: middle;
  }
  //コンテンツ
  .sofina-top__workshop__txtholder {
    padding-right: 40px;
    @include bp(sm) {
      padding-right: 0;
    }
  }
  .sofina-top__workshop__txtholder__content__title {
    color: $colorGray_2;
    @include fontSize(lv5);
    line-height: 1.5;
    padding-bottom: 5px;
  }
  .sofina-top__workshop__txtholder__content__text {
    color: $colorGray_2;
    @include fontSize(lv7);
    line-height: 1.5;
    padding-bottom: 5px;
  }
  .sofina-top__workshop__txtholder__buttons {
    margin-top: 20px;
    @include clearfix;
    .g-LinkButton {
      float: left;
      margin-right: 10px;
    }
  }

  /*-----------------------*/
  // lg
  /*-----------------------*/
  @include bp(lg) {
    .sofina-top__workshop__txtholder {
      margin-top: 30px;
    }
  }

  /*-----------------------*/
  // md
  /*-----------------------*/
  @include bp(md) {
    padding-left: 20px;
    padding-right: 20px;
    .l-HeadingTitle {
      &:after{
        margin-left: 0px;
      }
    }
  }
  /*-----------------------*/
  // sm
  /*-----------------------*/
  @include bp(sm) {
    padding: 15px;
    font-family: $fontFamily_Gothic;
    .g-Column__cols {
      display: block;
    }
    //タイトル
    .l-HeadingTitle {
      margin-bottom: 10px;
      // font-family: $fontFamily;
      &:after{
        position: absolute;
        @include topRight(0, 0);
      }
      .l-HeadingTitle__titleBlock__titleBox__title {
        display: block;
        margin-left: 0;
      }
    }
    //コンテンツ
    .sofina-top__workshop__txtholder {
    }
  }
}

