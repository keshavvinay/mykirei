@charset "utf-8";


/* ImageTextHP ================================================== */
.g-ImageTextHP {
  //クラス名が入れ子になる可能性があるため
  &.is-background {
    padding: $cmn_paddingInner;
  }
  &.is-layoutL {
    .g-ImageTextHP__contentsBlock__image {
      float: left;
      box-sizing: border-box;
      padding-right: $cmn_ImageTextPack__separator;
      @include bp(sm) {
        padding-right: $cmn_ImageTextPack__separator--sm;
      }
    }
    .g-ImageTextHP__contentsBlock__text {
      float: right;
    }
  }
  &.is-layoutR {
    .g-ImageTextHP__contentsBlock__image {
      float: right;
      box-sizing: border-box;
      padding-left: $cmn_ImageTextPack__separator;
      @include bp(sm) {
        padding-left: $cmn_ImageTextPack__separator--sm;
      }
    }
    .g-ImageTextHP__contentsBlock__text {
      float: left;
    }
  }
  &.is-smallViewVertical {
    &.is-layoutL, &.is-layoutR {
      .g-ImageTextHP__contentsBlock__image {
        @include bp(sm) {
          float: none;
          padding: 0;
          margin: 0 auto;
        }
      }
      .g-ImageTextHP__contentsBlock__text {
        @include bp(sm) {
          float: none;
          padding: 0;
          width: 100%;
        }
      }
    }
  }
  &.is-wraparound {
    .g-HeadingTitle__titleBlock {
      width: auto;
    }
    &.is-layoutL {
      @include imageTextHorizontalHeadingTitle('left', 'Image');
    }
    &.is-layoutR {
      @include imageTextHorizontalHeadingTitle('right', 'Image');
    }
    .g-ImageTextHP__contentsBlock__text {
      float: none;
      width: 100%;
    }
    .g-ImageTextHP__contentsBlock__text__moreinfo {
      display: inline-block;
      width: 100%;
    }
  }
}

.g-ImageTextHP__titleBlock {
}

.g-ImageTextHP__contentsBlock {
  @include pie-clearfix();
}

.g-ImageTextHP__contentsBlock__image {
}

.g-ImageTextHP__contentsBlock__text {
}

.g-ImageTextHP__contentsBlock__text__moreinfo {
}
