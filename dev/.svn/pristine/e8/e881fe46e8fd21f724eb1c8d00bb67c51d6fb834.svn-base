@charset "utf-8";

/*  product_subcategory_callout */

.jf-product_subcategory_callout {
  position: relative;
  background-color: $fallbackDarkBackground;
  backface-visibility: hidden;
  overflow: hidden;
  .l-Image {
    height: 300px;
    height: 100vw;
    width: 100%;
    margin: 0;
    text-decoration: none;
    @include bp(md) {
      height: 70vw;
    }
    @include bp(lg) {
      height: 31.5rem;
      backface-visibility: hidden;
    }
    .is-authorring & {
      height: auto !important;
    }

    &:before {
      content: "";
      display: block;
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      @include background(linear-gradient(to right, #25A9DA 0, #25A9DA 50%, #1F8FB2 50%, #1F8FB2 100%));
      transition: transform .25s ease-in-out;
      transform-origin: center;
      backface-visibility: hidden;
    }
    &:hover, &:focus {
      opacity: 1;
    }
  }
  .l-Image__img {
    width: 100%;
    height: 300px;
    height: 100vw;
    margin: 0;
    @include bp(md) {
      height: 100%;
    }
    @include bp(lg) {
      height: 100%;
    }
  }
  .l-PageTitle {
    margin: 0;
  }
  .l-PageTitle__titleBlock {
    table-layout: auto;
  }
  .l-PageTitle__titleBlock__titleBox__title {
    margin: 0;
  }
  .l-Image__img img, .l-PageTitle {
    @include centered;
    backface-visibility: hidden;
    .is-authorring & {
      position: relative;
      left: 0;
      top: auto;
      transform: translateX(0) translateY(0);
    }
  }
  .l-Image__img img {
    width: auto !important;
    height: 100%;
    height: calc(100% + 2px);
    border: 1px solid transparent;
    .is-authorring & {
      width: 100% !important;
      height: auto !important;
    }
  }
  .l-PageTitle {
    width: 100%;
    text-align: center;
    margin-top: 12.5px;
    margin-bottom: 12.5px;
    letter-spacing: 2px;
  }
  .l-PageTitle__h1 {
    font-size: 18px !important;
    letter-spacing: 1.6px !important;
  }
  @include bp(md) {
    .l-Image__img img {
      height: 120%;
    }
    .l-Image:hover:before, .l-Image:focus:before {
      transform: rotateZ(-90deg);
    }
  }
  @include bp(lg) {
    .l-Image__img img {
      height: calc(100% + 2px);
    }
    .l-Image:hover:before, .l-Image:focus:before {
      transform: rotateZ(-90deg);
    }
  }
}
