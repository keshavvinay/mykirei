@charset "utf-8";


/* Breadcrumbs ================================================== */
#area-BreadcrumbsTop {
  @include bp(sm) {
    display: none;
  }
  @include bp(md) {
    display: block;
  }
  @include bp(lg) {
    display: block;
  }
}
#area-BreadcrumbsBottom {
  @include bp(sm) {
    display: block;
  }
  @include bp(md) {
    display: none;
  }
  @include bp(lg) {
    display: none;
  }
}

.g-Breadcrumbs {
  width: 100%;
  max-width: 1336px;
  margin: 0 auto;
  padding: 12px 24px;
  box-sizing: border-box;
  border-bottom: 1px solid #ccc;
  @include bp(sm) {}
  @include bp(md) {}
  @include bp(lg) {
  padding: 12px 40px;
  border: none;
  }
  .g-Breadcrumbs__list {
    margin: 0;
    padding: 0;
    list-style: none;
    li {
      display: inline-block;
      color: #666;
      font-size: 12px;
      .cmn-icon {
        margin-left: 3px;
        vertical-align: middle;
      }
      &:last-child .cmn-icon {
        display: none;
      }
      a {
        color: inherit;
        &:hover ,
        &:focus {
          color: #999;
        }
      }
    }
  }
}

