@charset "utf-8";


/* Global Header ================================================== */
.sofina-BlHeader {
  padding: 0;
  background-color: $colorGray_8;
  font-family: $fontFamily_Gothic;
  .g-Area__inner {
    max-width: 100%;
  }
}


/* BlHeader
---------- ---------- ---------- */
.BlHeader {
  margin: 0 auto;
  padding: 10px 0;
  border-bottom: 1px solid #ccc;
  background-color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 10000;
  @include bp(sm) {
  }
  @include bp(md) {
  }
  @include bp(lg) {
    // padding: 40px 0 10px;
    position: static;
    min-width: 960px;
    &.is-fixed {
      // padding-top: 20px;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
    }
  }
}
/* heaer placeholder
---------- */
.BlHeaderPlaceHolder {
}



/* Logo
---------- ---------- */
.sofina-HeaderLogo {
  margin: 0 auto;
  padding: 0;
  width: 150px;
  height: 43px;
  img {
    width: 100%;
    height: auto;
    vertical-align: top;
  }
  a {
    display: block;
    position: relative;
    width: inherit;
    height: inherit;
    &:after {
      display: block;
      position: absolute;
      top: 0;
      left: 0;
      width: inherit;
      height: inherit;
      content: '';
    }
    &:hover:after {
      background-color: rgba(255,255,255,.5);
    }
  }
  @include bp(sm) {
    background-image: none;
  }
  @include bp(md) {
    width: 221px;
    height: 63px;
  }
  @include bp(lg) {
    margin: 10px auto 20px;
    width: 302px;
    height: 86px;
    .is-fixed & {
      margin-top: 10px;
      margin-bottom: 20px;
      width: 271px;
      height: 22px;
      overflow: hidden;
    }
    .is-fixed & img {
      // visibility: hidden;
    }
    a {
      &:focus:after {
        background-color: rgba(255,255,255,.5);
      }
    }
  }
}


/* Header Menu
---------- ---------- */
.sofina-HeaderMenu {
  padding: 0 10px;
  display: block;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  width: 20px;
  box-sizing: content-box;
  text-decoration: none;
  &:after {
    margin: auto;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    line-height: 1;
    height: 1em;
    content: '\e606';
    color: #777;
    font-family: 'icomoon';
    font-size: 1.7em;
    text-align: center;
  }
  &:focus ,
  &.is-open {
    background-color: #777;
    &:after {
      color: #fff;
    }
  }
  @include bp(sm) {
  }
  @include bp(md) {
  }
  @include bp(lg) {
    display: none;
  }
}


/* sbps GlobalNav
---------- ---------- */
.sofina-HeaderGlobalNav {
  margin: 0;
  padding: 0 10px;
  border-color: #ccc;
  border-style: solid;
  border-width: 1px 0;
  display: none;
  position: absolute;
  top: 100%;
  z-index: 1;
  overflow-y: scroll;
  width: 100%;
  list-style: none;

  background-color: #fff;
  box-sizing: border-box;

  &.is-open {
    display: block;
  }
  li {
    margin: 0;
    padding: 0;
    border-color: #ccc;
    border-style: solid;
    border-width: 1px 0 0;
    display: block;
    line-height: 1.3;
    font-size: 18px;
    &:first-child {
      border-top-width: 0;
    }
  }
  a {
    padding: 11px 20px 11px 0;
    display: block;
    color: #333;
    text-decoration: none;
    background: url(../img/arrow_glay_right.png) 100% 50% no-repeat;
    // background-size: 10px 18px;
    &:hover ,
    &:focus {
      color: #9a9a9a;
    }
  }

  @include bp(sm) {
  }
  @include bp(md) {
  }
  @include bp(lg) {
    margin: 0 auto;
    padding: 0;
    display: table;
    position: static;
    width: 960px;
    border-width: 0;
    li {
      border-color: #ddd;
      border-width: 0 1px 0 0;
      display: table-cell;
      width: 16.67%;
      line-height: 1.3;
      font-size: 15px;
      vertical-align: middle;
      &:first-child {
        border-left-width: 1px;
      }
    }
    a {
      padding: 0 10px;
      text-align: center;
      background-image: none;
    }
  }
}

