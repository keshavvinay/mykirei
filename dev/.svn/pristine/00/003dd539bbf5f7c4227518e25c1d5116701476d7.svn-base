@charset "utf-8";


/* NewsIndexP ================================================== */
.l-NewsIndexP--v2 {
}
.l-NewsIndexP--v2__list__item {
  border-color: $newsIndex__border;
}

/* NewsIndexUnit ================================================== */
.l-NewsIndexUnit--v2 {
  @include fontSize(body);
  &.is-link {
    @include link();
    @include areaLink();
  }
}
.l-NewsIndexUnit--v2__infoBlock__time {
  @include fontSize(body);
  color: $newsIndex__text;
}
.l-NewsIndexUnit--v2__infoBlock__categoryLabel {
  @include fontSize(body);
}
.l-NewsIndexUnit--v2__infoBlock__groupLabel {
  @include fontSize(body);
}
